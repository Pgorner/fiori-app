<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<VBox visible="{/configuration/actions/actionExists}">
		<VBox items="{/configuration/actions/addedActions}">
			<VBox class="sapUiSmallMarginBottom">
				<List items="items">
					<InputListItem>
						<HBox width="100%" justifyContent="SpaceBetween" alignItems="Center">
							<HBox>
								<Label class="sapUiTinyMarginEnd" required="true" />
								<ComboBox
									selectedKey="{titleKey}"
									placeholder="{i18n>GENERATOR_ACTION_TEXT}"
									value="{title}"
									change=".onAddedActionTitleChange"
									loadItems=".loadActions"
									items="{
										path: '/configuration/actions/annotationActions',
										sorter: { path: 'label' },
										length : 500,
										suspended: true
									}"
								>
									<core:Item key="{action}" text="{label}" />
								</ComboBox>
							</HBox>
							<Select
								selectedKey="{style}"
								change=".onAddedActionStyleChange"
								items="{
                                    path: '/configuration/actions/styles',
                                    sorter: { path: 'label' }
                                }"
								enabled="{isStyleControlEnabled}"
							>
								<core:Item key="{name}" text="{labelWithValue}" />
							</Select>
							<FlexBox alignItems="End" justifyContent="End">
								<Button type="Transparent" icon="sap-icon://delete" press="onAddedActionDelete" />
							</FlexBox>
						</HBox>
					</InputListItem>
				</List>
			</VBox>
		</VBox>

		<Button
			text="{i18n>GENERATOR_ADD_ACTION}"
			icon="sap-icon://add"
			press="onActionAddClick"
			class="sapUiTinyMarginTop"
			enabled="{/configuration/actions/isAddActionEnabled}"
		/>
	</VBox>
	<VBox alignItems="Center">
		<Text
			visible="{= !${/configuration/actions/actionExists} }"
			text="{i18n>GENERATOR_NO_ACTION_EXISTS_TEXT}"
			class="sapUiResponsiveMargin"
		/>
	</VBox>
</core:FragmentDefinition>
