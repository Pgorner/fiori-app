<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:macro="sap.fe.macros"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
	template:require="{FORM: 'sap/fe/macros/form/FormHelper', COMMON: 'sap/fe/macros/CommonHelper'}"
>
	<macro:ValueHelp
		_flexId="{= ${this>idPrefix} + '-content_FieldValueHelp'}"
		metaPath="{property>@@COMMON.getMetaPath}"
		contextPath="{contextPath>@@COMMON.getMetaPath}"
		binding="{= FORM.generateBindingExpression(${this>navigationPath},${entitySet>@@UI.getDataModelObjectPath})}"
	/>
</core:FragmentDefinition>
