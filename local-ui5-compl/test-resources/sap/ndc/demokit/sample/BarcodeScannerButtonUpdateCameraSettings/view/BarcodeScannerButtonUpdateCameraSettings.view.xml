<mvc:View
		controllerName="sap.ndc.sample.BarcodeScannerButtonUpdateCameraSettings.controller.BarcodeScannerButtonUpdateCameraSettings"
		xmlns:ndc="sap.ndc"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns="sap.m">
	<VBox class="sapUiSmallMargin">
		<HBox>
			<ndc:BarcodeScannerButton
				id="sampleBarcodeScannerButtonUpdateCameraSettings"
				scanSuccess="onScanSuccess"
				scanFail="onScanError"
				inputLiveUpdate="onScanLiveupdate"
				dialogTitle="Barcode Scanner Button Sample"
				preferFrontCamera="{/preferFrontCameraValueOne}"
				frameRate="{/frameRateValueOne}"
				zoom="{/zoomValueOne}"
				disableBarcodeInputDialog="{/disableBarcodeInputDialogValueOne}"
			/>
			<List class="sapUiSmallMarginBeginEnd">
				<items>
					<GroupHeaderListItem title="Properties"/>
					<InputListItem label="preferFrontCamera">
						<CheckBox
							selected="{/preferFrontCameraValueOne}">
						</CheckBox>
					</InputListItem>
					<InputListItem label="frameRate">
						<Input
							id="frameRateOne"
							type="Number"
							placeholder="Enter Frame Rate"
							value= "{/frameRateValueOne}"
							liveChange="onInputLiveChangeStringToNumber">
						</Input>
					</InputListItem>
					<InputListItem label="zoom">
						<Input
							id="zoomOne"
							type="Number"
							placeholder="Enter Zoom"
							value= "{/zoomValueOne}"
							liveChange="onInputLiveChangeStringToNumber">
						</Input>
					</InputListItem>
					<InputListItem label="disableBarcodeInputDialog">
						<CheckBox
							selected="{/disableBarcodeInputDialogValueOne}">
						</CheckBox>
					</InputListItem>
					<GroupHeaderListItem title="Nomal Configs"/>
					<InputListItem label="Enable GS1Header">
						<CheckBox
							selected="{/enableGS1Header}"
							select="onChangeEnableGS1Header">
						</CheckBox>
					</InputListItem>
					<InputListItem label="Change Camera(Not working on iOS devices)">
						<Select
							selectedKey="{status>/deviceId}"
							showSecondaryValues="false"
							change="onChangeCamera"
							items="{path: '/devices'}">
							<core:ListItem key="{deviceId}" text="{label}" />
						</Select>
					</InputListItem>
					<GroupHeaderListItem title="Scan Multiple Barcodes"/>
					<InputListItem label="Enabled">
						<CheckBox
							selected="{status>/apis/ZXingCPP/multiScan/enabled}"
							select="onChangeEnableMultiScan">
						</CheckBox>
					</InputListItem>
					<InputListItem label="Show Pause Button" visible="{status>/apis/ZXingCPP/multiScan/enabled}">
						<CheckBox
							selected="{status>/apis/ZXingCPP/multiScan/showPauseButton}"
							select="onChangeShowPauseButton">
						</CheckBox>
					</InputListItem>
					<InputListItem label="Pause if has results" visible="{= ${status>/apis/ZXingCPP/multiScan/enabled} &amp;&amp; !${status>/apis/ZXingCPP/multiScan/showPauseButton}}">
						<CheckBox
							selected="{status>/apis/ZXingCPP/multiScan/pauseIfHasResult}"
							select="onChangePauseIfHasResult">
						</CheckBox>
					</InputListItem>
					<InputListItem label="Stop if only has 1 result" visible="{= ${status>/apis/ZXingCPP/multiScan/enabled} &amp;&amp; !${status>/apis/ZXingCPP/multiScan/showPauseButton} &amp;&amp; ${status>/apis/ZXingCPP/multiScan/pauseIfHasResult}}">
						<CheckBox
							selected="{status>/apis/ZXingCPP/multiScan/stopIfOnlyHasOneResult}"
							select="onChangeStopIfOnlyHasOneResult">
						</CheckBox>
					</InputListItem>
				</items>
			</List>
		</HBox>
		<HBox class="sapUiTinyMarginTop">
			<Label text="Scan Result:"/>
			<Text id="sampleBarcodeScannerButtonUpdateCameraSettingsResultText" text="" class="sapUiTinyMarginBegin"/>
		</HBox>
		<HBox class="sapUiTinyMarginTop">
			<Label text="Scan Time:"/>
			<Text id="sampleBarcodeScannerButtonUpdateCameraSettingsResultTime" text="" class="sapUiTinyMarginBegin"/>
		</HBox>
	</VBox>
</mvc:View>
