<core:FragmentDefinition xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns:ovp="sap.ovp.ui"
    xmlns="sap.suite.ui.commons" xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
    xmlns:viz="sap.viz.ui5.controls" xmlns:sl="sap.ui.comp.navpopover" xmlns:smartchart="sap.ui.comp.smartchart"
    xmlns:layout="sap.ui.layout" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data">
    
    <viz:Popover></viz:Popover>
    <m:VBox id="vbLayout">
        <layout:Splitter width="100%" height="100%">
            <layout:contentAreas>
                <ChartContainer id="chartContainer"
                    showFullScreen="true"
                    showPersonalization="false"
                    autoAdjustHeight="false"
                    showLegendButton="false"
                    showSelectionDetails="false">
                    <content>
                        <ChartContainerContent icon="sap-icon://bubble-chart" title="Bubble Chart">
                            <content>
                                <viz:VizFrame id="idVizFrame" vizType='dual_column'
                                    vizProperties="{ title: {text : 'Total Transactions' , visible : true}, plotArea: {dataLabel: {visible : true}}}">
                                    <viz:dataset>
                                        <viz.data:FlattenedDataset data="{/Books}">
                                            <viz.data:dimensions>
                                                <viz.data:DimensionDefinition name="ID" value="{ID}"/>
                                            </viz.data:dimensions>
                                            <viz.data:measures>
                                                <viz.data:MeasureDefinition name="stock" value="{stock}"/>
                                                <viz.data:MeasureDefinition name="amount" value="{amount}"/>
                                            </viz.data:measures>
                                        </viz.data:FlattenedDataset>
                                    </viz:dataset>
                                    <viz:feeds>
                                        <viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="ID"/>
                                        <viz.feeds:FeedItem uid="valueAxis" type="Measure" values="stock"/>
                                        <viz.feeds:FeedItem uid="valueAxis2" type="Measure" values="amount"/>
                                    </viz:feeds>
                                </viz:VizFrame>
                            </content>
                        </ChartContainerContent>
                    </content>
                </ChartContainer>
            </layout:contentAreas>
        </layout:Splitter>
    </m:VBox>
</core:FragmentDefinition>