<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:build="sap.build"
    xmlns:ovp="sap.ovp.ui"
    xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
    template:require="{
		CardAnnotationhelper: 'sap/ovp/cards/AnnotationHelper'
	}"   
>
    <Table
        core:require="{CardAnnotationhelper: 'sap/ovp/cards/AnnotationHelper'}"
        id="ovpTable"
        class="ovpTableClass"
        items="{parts:[{path:'entitySet>'}, {path:'ovpCardProperties>/annotationPath'}], formatter: 'CardAnnotationhelper.formatItems'}"
        build:metadata="#pattern:GenericCard>Table;set:ovpCardProperties>/annotationPath:com.sap.vocabularies.UI.v1.LineItem">
        <customData>
            <ovp:CustomData key="aria-label" value="{ovplibResourceBundle>tableCard}" writeToDom="true"/>
            <ovp:CustomData key="role" value="heading" writeToDom="true"/>
        </customData>
        <template:if test="{= ${ovpCardProperties>/layoutDetail} === 'resizable'}">
            <template:then>
                <core:Fragment fragmentName="bookshop.ext.table.TableDashBoardLayout" type="XML"/>
            </template:then>
            <template:else>
                <core:Fragment fragmentName="bookshop.ext.table.TableEasyScanLayout" type="XML"/>
            </template:else>
        </template:if>
    </Table>
</core:FragmentDefinition>