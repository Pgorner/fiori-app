<core:FragmentDefinition
	xmlns="sap.ui.table"
	xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:columnmenu="sap.m.table.columnmenu"
	xmlns:core="sap.ui.core"
	xmlns:axistime="sap.gantt.axistime"
	xmlns:config="sap.gantt.config"
	xmlns:gantt="sap.gantt.simple"
    xmlns:shapes="sap.gantt.simple.shapes"
    xmlns:rm="sap.ui.table.rowmodes">
    <gantt:GanttChartWithTable id="ganttChartAdhoc" adhocLineLayer="Bottom" shapeSelectionMode = "Single">
        <gantt:axisTimeStrategy>
            <axistime:ProportionZoomStrategy id="Zoom">
                <axistime:totalHorizon>
                    <config:TimeHorizon startTime="20191201000000" endTime="20201031000000"/>
                </axistime:totalHorizon>
                <axistime:visibleHorizon>
                    <config:TimeHorizon startTime="20200101000000" endTime="20200731000000"/>
                </axistime:visibleHorizon>
            </axistime:ProportionZoomStrategy>
        </gantt:axisTimeStrategy>
        <gantt:simpleAdhocLines>
            <gantt:AdhocLine markerType="Diamond" markerPopoverDelay="500" stroke="@sapUiLegend13" strokeDasharray="5, 1" timeStamp="20200101000000"/>
            <gantt:AdhocLine markerType="Diamond" description="Recipe Registration Phase" stroke="@sapUiPositiveText" strokeDasharray="5, 2" timeStamp="20200201000000"/>
        </gantt:simpleAdhocLines>
		<gantt:table>
			<Table id="ganttTreeTableAdhoc"
                sort="onSort" columnResize="onColumnResize" columnMove="onColumnMove" rows="{data>/root/gridNodes}">
				<extension>
					<m:OverflowToolbar>
						<m:content>
                            <m:Button icon="sap-icon://expand-all" type="Transparent"/>
                            <m:Button icon="sap-icon://collapse-all" type="Transparent"/>
                            <m:DatePicker id="adhocLine" width="200px" displayFormat="yyyy-MM-dd" valueFormat="yyyyMMddHHmmss"/>
                            <m:Button text="Hide Shape" id="showHideBtn" type="Transparent" press="onShow"/>
                            <m:ToolbarSpacer/>
                            <m:Button icon="sap-icon://action-settings" press="openPersoDialog"/>
                        </m:content>
					</m:OverflowToolbar>
				</extension>
                            <dependents>
                <columnmenu:Menu id="menu">
                    <columnmenu:items>
                        <columnmenu:ActionItem icon="sap-icon://sort" label="Sort" press="onColumnHeaderItemPress"/>
                        <columnmenu:ActionItem icon="sap-icon://table-column" label="Columns" press="onColumnHeaderItemPress"/>
                    </columnmenu:items>
                </columnmenu:Menu>
            </dependents>
                <columns>
                    <Column id="Column0" sortProperty="ProjectElemID" filterProperty="ProjectElemID" autoResizable="true" defaultFilterOperator="EQ" headerMenu="menu">
                        <m:Text text="ID"/>
                        <template>
                            <m:Label text="{data>ProjectElemID}"/>
                        </template>
                    </Column>
                    <Column id="Column1" sortProperty="ObjectName" filterProperty="ObjectName" autoResizable="true" defaultFilterOperator="StartsWith" headerMenu="menu">
                        <m:Text text="Object Name"/>
                        <template>
                            <m:Label text="{data>ObjectName}"/>									
                        </template>
                    </Column>
                    <Column id="Column2" sortProperty="Percentage" filterProperty="Percentage" autoResizable="true" defaultFilterOperator="EQ" headerMenu="menu">
                        <m:Text text="Percentage"/>
                        <template>
                            <m:Label text="{data>Percentage}"/>
                        </template>
                    </Column>
                    <Column id="Column3" sortProperty="Description" filterProperty="Description" autoResizable="true" visible="{= ${view>/isDescriptionVisible}}" headerMenu="menu">
                        <m:Text text="Description"/>
                        <template>
                            <m:Label text="{data>Description}"/>
                        </template>
                    </Column>
                    <Column id="Column4" sortProperty="text" filterProperty="text" autoResizable="true" defaultFilterOperator="EQ" headerMenu="menu" >
                        <customData>
                            <core:CustomData key="p13nData"
                                value='{"columnKey": "text",
                                "leadingProperty":"text",
                                "dataType": "string",
                                "hierarchyNodeLevel": "HierarchyNodeLevel",
                                "wrap": true}' />
                        </customData>
                        <m:Text text="My Custom Column"/>
						<template>
							<l:VerticalLayout id="CustomLinkLayout">
								<m:Link id="customLink" text="{data>text}" emphasized="true" press="onCustomColumnPress" />
							</l:VerticalLayout>
						</template>
					</Column>
                </columns>
                <rowMode>
                    <rm:Auto minRowCount="12"/>
                </rowMode>
				<rowSettingsTemplate>
					<gantt:GanttRowSettings rowId="{id}" shapes1="{path: 'data>task', templateShareable:false}"
                        shapes2="{path: 'data>subtask', templateShareable:false}">
                        <gantt:shapes1>
                            <shapes:Task time="{path: 'data>startTime', formatter: '.fnTimeConverter'}" endTime="{path: 'data>endTime', formatter: '.fnTimeConverter'}"
                                type="SummaryExpanded" color="sapUiAccent5" countInBirdEye="true" visible="{= ${view>/isShapeVisible}}"/>
                        </gantt:shapes1>
                        <gantt:shapes2>
                            <shapes:Task time="{path: 'data>startTime', formatter: '.fnTimeConverter'}" endTime="{path: 'data>endTime', formatter: '.fnTimeConverter'}" countInBirdEye="true" visible="{= ${view>/isShapeVisible}}"/>
                        </gantt:shapes2>
                    </gantt:GanttRowSettings>
				</rowSettingsTemplate>
			</Table>
		</gantt:table>
	</gantt:GanttChartWithTable>
</core:FragmentDefinition>