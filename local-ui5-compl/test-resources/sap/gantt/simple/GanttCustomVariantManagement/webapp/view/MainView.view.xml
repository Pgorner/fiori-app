<mvc:View controllerName="gantt.demo.GanttCustomVariantManagement.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:gantt="sap.gantt.simple"
	xmlns:axistime="sap.gantt.axistime"
	xmlns:customVariant="gantt.demo.GanttCustomVariantManagement.helper"
	 xmlns:sv="sap.ui.comp.smartvariants"
	 xmlns:m="sap.m"
	xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Gantt Custom Variant Management" titleAlignment="Center">
					<content>
						<sv:SmartVariantManagement id="__SVM01" persistencyKey="UniqueAndStablePersistencyKey" showShare="true" showExecuteOnSelection="true"
						useFavorites="true"/>
						<gantt:GanttChartContainer id="ganttContainer" height="100%" width="100%" layoutOrientation="Vertical" enableTimeScrollSync="true"
							enableCursorLine="true" enableNowLine="true" enableVerticalLine="true" enableAdhocLine="true" displayType="Both" customSettingChange="updateOnSettingsChange"
							variantApplied="onVariantApplied" enableVariantManagement="false">
							<gantt:toolbar>
								<gantt:ContainerToolbar id="ganttContainerToolbar" showBirdEyeButton="true" showDisplayTypeButton="true" showLegendButton="true" showSearchButton="false">
									<Select id="layoutSelect" forceSelection="false" selectedKey="AdhocAndDelta" change="onLayoutChange">
										<items>
											<core:Item key="AdhocAndDelta" text="Table 1 and 2"/>
											<core:Item key="Adhoc" text="Table 1"/>
											<core:Item key="Delta" text="Table 2"/>
										</items>
									</Select>
									<Button text="Export to PDF" press="onExportPDF" />
									<Button text="Export Single Page PDF" press="onExportSinglePage" />
									<!-- <Button text="Hide Description" id="descBtn" type="Transparent" press="onChange"/> -->
								</gantt:ContainerToolbar>
							</gantt:toolbar>
							<gantt:variantHandler>
								<customVariant:ExtendCustomVariantSettings id="variantId"></customVariant:ExtendCustomVariantSettings>
							</gantt:variantHandler>
							<core:Fragment fragmentName="gantt.demo.GanttCustomVariantManagement.fragment.GanttChartWithAdhoclines" type="XML"/>
							<core:Fragment fragmentName="gantt.demo.GanttCustomVariantManagement.fragment.GanttChartWithDeltalines" type="XML"/>
						</gantt:GanttChartContainer>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>