<mvc:View
		controllerName="sap.gantt.sample.GanttPrinting.Gantt"
		height="100%"
		xmlns="sap.gantt.simple"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m">
	<GanttChartContainer id="ganttContainer">
		<toolbar>
			<ContainerToolbar stepCountOfSlider="6" showSearchButton="false">
				<m:Button text="Export to PDF" press="onExportPDF" />
				<m:Button text="Export Single Page PDF" press="onExportSinglePage" />
			</ContainerToolbar>
		</toolbar>
	</GanttChartContainer>
</mvc:View>