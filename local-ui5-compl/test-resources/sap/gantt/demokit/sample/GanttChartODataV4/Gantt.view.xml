<mvc:View
		controllerName="sap.gantt.sample.GanttChartODataV4.Gantt"
		height="100%"
		xmlns="sap.gantt.simple"
		xmlns:axistime="sap.gantt.axistime"
		xmlns:config="sap.gantt.config"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:shapes="sap.gantt.simple.shapes"
		xmlns:table="sap.ui.table"
		xmlns:rm="sap.ui.table.rowmodes">
	<GanttChartContainer>
		<toolbar>
			<ContainerToolbar showDisplayTypeButton="true" showBirdEyeButton="true"	id="containerToolbar"/>
		</toolbar>
		<GanttChartWithTable id="gantt1" 
			shapeDrop="onShapeDrop"
			shapeResize="onShapeResize"
			shapeContextMenu="onShapeContextMenu"
			shapeConnect="onShapeConnect"
			showTextOnGhost="true"
			shapeSelectionMode="MultiWithKeyboardAndLasso">
			<axisTimeStrategy>
				<axistime:ProportionZoomStrategy>
					<axistime:totalHorizon>
						<config:TimeHorizon
								startTime="20160501000000" endTime="20170901000000"/>
					</axistime:totalHorizon>
					<axistime:visibleHorizon>
						<config:TimeHorizon
								startTime="20160501000000" endTime="20170601000000"/>
					</axistime:visibleHorizon>
				</axistime:ProportionZoomStrategy>
			</axisTimeStrategy>
			<table>
				<table:Table
						selectionMode="Single"
						selectionBehavior="RowSelector"
						enableColumnReordering="true"
						rows="{
								path: '/People'
							}">
					<table:columns> 
						<table:Column>
							<m:Text text="Username" />
							<table:template>
								<m:Text text="{FirstName} {LastName}" />
							</table:template>
						</table:Column>
						<table:Column>
							<m:Text text="Age" />
							<table:template>
								<m:Text text="{Age} years" />
							</table:template>
						</table:Column>
						<table:Column>
							<m:Text text="Start Date" />
							<table:template>
								<m:DatePicker dateValue="{StartDate}"/>
							</table:template>
						</table:Column>
						<table:Column>
							<m:Text text="End Date" />
							<table:template>
								<m:DatePicker dateValue="{EndDate}"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:rowMode>
						<rm:Auto minRowCount="12"/>
					</table:rowMode>
					<table:rowSettingsTemplate>
						<GanttRowSettings rowId="{UserName}">
							<shapes1>
								<BaseRectangle 
								title="{FirstName} {LastName}"
								tooltip="{FirstName} {LastName}"
								fill="#0092D1"
								selectedFill="#0955d9"
								fontSize="15"
								fontWeight="bold"
								selectedTitleColor="#F7ADCD"				
								hoverable="true"
								height="19"
								titleSpacing="20"
								horizontalTextAlignment="Dynamic"
								verticalTextAlignment="Center"
								time="{StartDate}" selectable="true" countInBirdEye="true" connectable="true" shapeId="{ShapeId}"
								 draggable="true" resizable="true" endTime="{EndDate}" />
							</shapes1>
							<relationships>
								<Relationship shapeId="{RelationID}"
									predecessor="{PredTaskID}" successor="{SuccTaskID}" type="{RelationType}" 
									selectable="true" hoverable="true"/>
							</relationships>
						</GanttRowSettings>
					</table:rowSettingsTemplate>
				</table:Table>
			</table>
		</GanttChartWithTable>
	</GanttChartContainer>
</mvc:View>
