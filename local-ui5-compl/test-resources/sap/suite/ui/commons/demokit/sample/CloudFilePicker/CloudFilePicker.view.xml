<mvc:View
	controllerName="sap.suite.ui.commons.sample.CloudFilePicker.CloudFilePicker"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:unified="sap.ui.unified"
	xmlns:layout="sap.ui.layout"
	width="100%" 
	height="100%">

	<layout:VerticalLayout class="sapUiContentPadding" width="100%" hieght="100%">
		<layout:HorizontalLayout>
			<Button press="onPress" text="Export File" />
		</layout:HorizontalLayout>
		<TextArea id="resultTextArea" class="sapUiMediumMarginTop sapUiLargeMarginBegin" width="90%" rows="20" growing="true" growingMaxLines="20"></TextArea>
		<Label id="cloudFileNoteDescription" text="Note: Breadcrumb will be disabled only in the sample applications in demokit whereas in deployed scenario it will be enabled and works as expected."/>
	</layout:VerticalLayout>

</mvc:View>