<mvc:View controllerName="STTA_MP.reuseComponents.simple.view.Default" 
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:st="sap.ui.comp.smarttable"
	xmlns:mvc="sap.ui.core.mvc">
	<VBox fitContainer="true" id="VboxID">
		<VBox>
			<st:SmartTable id="SalesDataReuseComponent"
				initialise="SalesPriceInitialise"
				persistencyKey="SalesData"
				header="Reuse Sales Data Table"
				useVariantManagement="false"
				enableAutoBinding="true"
				showRowCount="true"
				tableType="ResponsiveTable"
				tableBindingPath="to_ProductSalesData"
				entitySet="STTA_C_MP_ProductSalesData">
			</st:SmartTable>
		</VBox>
	</VBox>
</mvc:View>