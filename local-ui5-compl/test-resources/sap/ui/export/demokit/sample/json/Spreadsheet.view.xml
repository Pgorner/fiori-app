<mvc:View
	controllerName="sap.ui.export.sample.json.Spreadsheet"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	height="100%">
	<Page title="Spreadsheet from JSONModel" showHeader="false">
		<Table
			id="exportTable"
			inset="false"
			items="{
				path:'/',
				sorter: [{ path: 'Currency' }, { path: 'Salary', descending: true }],
				filters: [{
					path: 'Currency',
					operator: 'EQ',
					value1: 'EUR'
				},
				{
					path: 'Currency',
					operator: 'EQ',
					value1: 'USD'
				},
				{
					path: 'Currency',
					operator: 'EQ',
					value1: 'CNY'
				},
				{
					path: 'Active',
					operator: 'EQ',
					value1: true
				}]
			}"
			growing="true"
			growingThreshold="10">
			<headerToolbar>
				<OverflowToolbar>
					<ToolbarSpacer />
					<Button icon="sap-icon://excel-attachment" press="onExport"/>
				</OverflowToolbar>
			</headerToolbar>
			<infoToolbar>
				<Toolbar>
					<Text text="Filter: Currency, Active - Sorter: Currency, Salary"/>
				</Toolbar>
			</infoToolbar>
			<columns>
				<Column>
					<Text text="ID" />
				</Column>
				<Column>
					<Text text="Firstname" />
				</Column>
				<Column>
					<Text text="Lastname" />
				</Column>
				<Column>
					<Text text="Salary" />
				</Column>
				<Column>
					<Text text="Currency" />
				</Column>
				<Column>
					<Text text="Active" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier title="{UserID}" />
						<Text text="{Firstname}" />
						<Text text="{Lastname}" />
						<Text text="{path: 'Salary', type: 'sap.ui.model.type.Float'}" />
						<Text text="{Currency}" />
						<Text text="{path: 'Active', type: 'sap.ui.model.type.Boolean'}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>
