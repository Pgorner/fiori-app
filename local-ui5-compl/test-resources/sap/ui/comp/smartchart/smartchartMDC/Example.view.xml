<mvc:View xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.ui.comp.smartchart"
		xmlns:html="http://www.w3.org/1999/xhtml"
		xmlns:sl="sap.ui.comp.navpopover"
		xmlns:m="sap.m"
		xmlns:chart="sap.chart"
		xmlns:chartData="sap.chart.data"
		xmlns:mdc="sap.ui.mdc"
		xmlns:mdcc="sap.ui.mdc.chart"
		xmlns:mdcat="sap.ui.mdc.actiontoolbar"
		xmlns:variants="sap.ui.fl.variants"
		xmlns:demo="test.sap.ui.comp.smartchart"
		xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		controllerName="test.sap.ui.comp.smartchart.Example"
		height="560px">

	<!-- <m:VBox id="vb" fitContainer="true"> -->
		<!-- <m:HBox id="hbox">
			<m:Button id="btnState" icon="sap-icon://journey-change" press="onPressUIState"/>
			<m:Button id="btnRTA" text="RTA" press="onPressRTA"/>
			<m:Button id="btnSearch" text="Go" press="onPressGo"/>
		</m:HBox> -->

		<SmartChart id="smartChart01"
					enableAutoBinding="true"
					entitySet="ProductCollection"
					chartType="column"
					useVariantManagement="true"
					persistencyKey="PKeyChartExample9"
					useChartPersonalisation="true"
					header="SmartChart Products"
					headerStyle="H4"
					showFullScreenButton="true"
					selectionMode="Multi"
					useTooltip="true"
					showChartTooltip="false"
					showDrillBreadcrumbs="true"
					showDetailsButton="true"
					showDrillButtons="false"
					showSemanticNavigationButton="false"
					showChartTypeSelectionButton="true"
					beforeRebindChart="onBeforeRebindChart"
					activateTimeSeries="false"
			>
			<!--Item Level -->
			<selectionDetailsItemActions>
				<core:Item id="btnAction1" key="ItemAction1" text="ItemAction 1"></core:Item>
				<core:Item id="btnAction2" key="ItemAction2" text="ItemAction 2"></core:Item>
			</selectionDetailsItemActions>

			<!--Footer Level -->
			<selectionDetailsActions>
				<core:Item id="btnAction11" key="Action1" text="Action 1"></core:Item>
				<core:Item id="btnAction12" key="Action2" text="Action 2"></core:Item>
			</selectionDetailsActions>

			<!--Group Level -->
			<selectionDetailsActionGroups>
				<core:Item id="btnGroupAction1" key="GroupAction1" text="GroupAction 1"></core:Item>
				<core:Item id="btnGroupAction2" key="GroupAction2" text="GroupAction 2"></core:Item>
			</selectionDetailsActionGroups>

			<!-- Create own instance of inner chart and hand in a custom dimension -->
			<!-- <chart:Chart id="sapChart" width="100%">
				<chart:dimensions>
					<chartData:Dimension id="customDim"
										 label="CustomDimension"
										 name="Category"
										 customData:p13nData='\{"columnKey":"Category", "aggregationRole":"dimension"\}'>
					</chartData:Dimension>
				</chart:dimensions>
				<chart:measures>
					<chartData:Measure id= "custMeas"
									   label="CustomMeasure"
									   bindingContexts="CustomMeasure"
									   name="Width"
									   customData:p13nData='\{"columnKey":"Width", "aggregationRole":"measure"\}'>
					</chartData:Measure>
				</chart:measures>
			</chart:Chart> -->

			<semanticObjectController>
				<sl:SemanticObjectController id="1" navigate="onNavigate"/>
			</semanticObjectController>
			<!-- layout data used to make the table growing but the filter bar fixed -->
			<layoutData>
				<m:FlexItemData id="2" growFactor="1"/>
			</layoutData>
		</SmartChart>

		<mdc:Chart
			id="mdcOdataV2Chart"
			autoBindOnInit="true"
			noDataText="Oops Nothing available!"
			p13nMode="Item,Type,Filter,Sort"
			delegate='\{
				"name": "test/sap/ui/comp/smartchart/ODataV2Chart.delegate",
				"payload": \{
					"collectionName": "ProductCollection"
				\}
			\}'
			chartType="column"
			header="mdcChart Products"
			headerStyle="H4"
			width="100%"
			showSelectionDetails= "true"
			legendVisible= "true"
			propertyInfo='[
						\{
							"name": "Name",
							"path": "Name",
							"dataType": "Edm.String",
							"label": "Name",
							"sortable": true,
							"filterable": true,
							"groupable": true,
							"aggregatable": false,
							"role": "category"
						\},
						\{
							"name": "Category",
							"path": "Category",
							"dataType": "Edm.String",
							"label": "Product Category",
							"sortable": true,
							"filterable": true,
							"groupable": true,
							"aggregatable": false,
							"role": "category"
						\},
						\{
							"name": "Price",
							"path": "Price",
							"dataType": "Edm.Decimal",
							"label": "Price",
							"sortable": true,
							"filterable": true,
							"groupable": false,
							"aggregatable": true,
							"role": "axis1"
						\},
						\{
							"name": "Quantity",
							"path": "Quantity",
							"dataType": "Edm.Decimal",
							"label": "Quantity",
							"sortable": true,
							"filterable": true,
							"groupable": false,
							"aggregatable": true,
							"role": "axis1"
						\},
						\{
							"name": "WeightMeasure",
							"path": "WeightMeasure",
							"dataType": "Edm.Decimal",
							"label": "Weight",
							"sortable": true,
							"filterable": true,
							"groupable": false,
							"aggregatable": true,
							"role": "axis1"
						\}

			]'
			>
			<mdc:actions>
				<mdcat:ActionToolbarAction id="FullScreenBtnAction">
					<m:Button text="Fullscreen" id="FullScreenBtn" press="onFullscreen" />
				</mdcat:ActionToolbarAction>
			</mdc:actions>

			<mdc:selectionDetailsActions>
				<mdcc:SelectionDetailsActions>
					<mdcc:detailsItemActions>
						<core:Item key="ItemAction1" text="ItemAction 1"></core:Item>
						<core:Item key="ItemAction2" text="ItemAction 2"></core:Item>
					</mdcc:detailsItemActions>

					<mdcc:detailsActions>
						<core:Item key="Action1" text="Action 1"></core:Item>
						<core:Item key="Action2" text="Action 2"></core:Item>
					</mdcc:detailsActions>

					<mdcc:actionGroups>
						<core:Item key="GroupAction1" text="GroupAction 1"></core:Item>
						<core:Item key="GroupAction2" text="GroupAction 2"></core:Item>
					</mdcc:actionGroups>
				</mdcc:SelectionDetailsActions>
			</mdc:selectionDetailsActions>

			<mdc:variant>
				<variants:VariantManagement id="IDVariantManagementOfChart" for="mdcOdataV2Chart"/>
			</mdc:variant>

			<mdc:items>
				<mdcc:Item id="dim1" type="groupable" propertyKey="Name" role="category" label="Name"/>
				<mdcc:Item id="dim2" type="groupable" propertyKey="Category" role="category" label="Product Category"/>
				<mdcc:Item id="meas1" type="aggregatable" propertyKey="Price" role="axis1" label="Price"/>
				<mdcc:Item id="meas2" type="aggregatable" propertyKey="Quantity" role="axis1" label="Quantity"/>
				<mdcc:Item id="meas3" type="aggregatable" propertyKey="WeightMeasure" role="axis1" label="Weight"/>
			</mdc:items>
		</mdc:Chart>


	<!-- </m:VBox> -->
</mvc:View>
