<mvc:View
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:sc="sap.ui.comp.smartchart"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smarttable="sap.ui.comp.smarttable"
	class="sapUiSizeCompact"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:l="sap.ui.layout"
	controllerName="view.Main">

	<App>
		<Page showHeader="false">
			<content>
				<l:VerticalLayout width="50%">
					<Panel expandable="true" expanded="true" width="100%" class="sapUiResponsiveMargin" headerText="SmartTable">
						<smarttable:SmartTable id="IDSmartTable" tableType="AnalyticalTable" editable="false"
							enableAutoBinding="true" entitySet="ZEPM_C_SALESORDERITEMQUERY" initialise="enableCETable"
							useVariantManagement="true" persistencyKey="PKeyTable"
							useTablePersonalisation="true" header="Product" showRowCount="true" enableExport="false">
							<t:Table id="actUponB1" selectionMode="MultiToggle" ariaLabelledBy="title" enableSelectAll="true">
								<t:columns>
									<!--Company Code -->
									<t:Column id="STRING_INOUT" sortProperty="STRING_INOUT" filterProperty="STRING_INOUT">
										<t:customData>
										<core:CustomData key="p13nData"
											value='\{"columnKey": "STRING_INOUT","columnIndex":"0","leadingProperty": "STRING_INOUT"}' />
										</t:customData>
										<Label text="STRING_INOUT" />
										<t:template>
										<Text text="{STRING_INOUT}" />
										</t:template>
									</t:Column>
									<t:Column id="STRING" sortProperty="STRING" filterProperty="STRING">
										<t:customData>
										<core:CustomData key="p13nData"
											value='\{"columnKey": "STRING","columnIndex":"0","leadingProperty": "STRING"}' />
										</t:customData>
										<Label text="STRING" />
										<t:template>
										<Text text="{STRING}" />
										</t:template>
									</t:Column>
									<t:Column id="STRING_IN" sortProperty="STRING_IN" filterProperty="STRING_IN">
										<t:customData>
										<core:CustomData key="p13nData"
											value='\{"columnKey": "STRING_IN","columnIndex":"0","leadingProperty": "STRING_IN"}' />
										</t:customData>
										<Label text="STRING_IN" />
										<t:template>
										<Text text="{STRING_IN}" />
										</t:template>
									</t:Column>
								</t:columns>
								</t:Table>
							</smarttable:SmartTable>
					</Panel>
				</l:VerticalLayout>

				<l:VerticalLayout width="50%">
					<Panel expandable="true" expanded="true" width="100%" class="sapUiResponsiveMargin" headerText="Filter data for SmartTable">
						<l:VerticalLayout width="50%">
							<Title text="Current filter data processed by SmartTable perso controller: " id="currentTableFilterDataController"/>
							<ce:CodeEditor id="dataTableController" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
						<l:VerticalLayout width="50%">
							<Title text="Current filter data processed by SmartTable: " id="currentSmartTableFilterData"/>
							<ce:CodeEditor id="dataTable" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
					</Panel>
				</l:VerticalLayout>
			</content>
		</Page>
	</App>
</mvc:View>
