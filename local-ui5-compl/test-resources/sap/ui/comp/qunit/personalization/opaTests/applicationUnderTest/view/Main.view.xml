<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smarttable="sap.ui.comp.smarttable"
	controllerName="view.Main">

	<App id="tabletestapp">
		<Page id="tabletestpage" showHeader="false">
			<content>
				<VBox id="tabletestbox" width="100%">
					<items>
						<Toolbar id="tabletestbar">
							<Button id="IDSetDataSuiteFormatButton" icon="sap-icon://journey-change"
								press="onSetDataSuiteFormatPress"/>
							<MultiComboBox id="IDMultiComboBox" placeholder="Exclude columns"
								selectionFinish="onSelectionFinish" items="{path:'JSON>/ColumnKeys'}">
								<core:Item id="data" key="{JSON>columnKey}" text="{JSON>columnKey}"/>
							</MultiComboBox>
							<Button id="rtaBtn" text="Start RTA" press="onPressRTA"/>
						</Toolbar>
						<smarttable:SmartTable id="IDSmartTable" tableType="AnalyticalTable" editable="false"
							enableAutoBinding="true" entitySet="ProductCollection"
							useVariantManagement="true" persistencyKey="PKeyApplicationUnderTest"
							useTablePersonalisation="true" header="ProductCollection" showRowCount="true" enableExport="false"
							uiStateChange="onUiStateChange"/>
					</items>
				</VBox>
				<HBox>
					<Button id="clearLog" text="Clear log" press=".clearLog" class="sapUiSmallMarginEnd"/>
				</HBox>
				<List id="events" headerText="LOG:"/>
			</content>
		</Page>
	</App>

</mvc:View>
