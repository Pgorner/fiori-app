<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:sc="sap.ui.comp.smartchart"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smarttable="sap.ui.comp.smarttable"
	xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
	xmlns:config="sap.ui.comp.config"
	class="sapUiSizeCompact"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:l="sap.ui.layout"
	controllerName="view.Main">

	<App>
		<Page showHeader="false">
			<content>
				<l:VerticalLayout width="50%">
					<Panel expandable="true" expanded="true" width="100%" class="sapUiResponsiveMargin" headerText="SmartTable">
						<smarttable:SmartTable id="IDSmartTable" tableType="AnalyticalTable" editable="false"
							enableAutoBinding="true" entitySet="ZEPM_C_SALESORDERITEMQUERYResults" initialise="enableCETable"
							useVariantManagement="true" persistencyKey="PKeyTableee"
							useTablePersonalisation="true" header="Product" showRowCount="true">
							<smarttable:customData>
								<core:CustomData key="dateFormatSettings" value='\{"UTC":false, "style":"short"\}' />
							</smarttable:customData>
							<smarttable:filterControlConfiguration>
								<config:FilterControlConfiguration key="DTR_SINGLE" conditionType="{
									module: 'sap.ui.comp.config.condition.DateRangeType',
									operations: {
										filter: [
											{path: 'key', equals: 'TODAY', exclude:true}
										]
									}
								}" />
								<config:FilterControlConfiguration key="DTR_MULTIPLE" conditionType="sap.ui.comp.config.condition.DateRangeType" />
								<config:FilterControlConfiguration key="DTR_INTERVAL" conditionType="sap.ui.comp.config.condition.DateRangeType" />
								<config:FilterControlConfiguration key="DTR_INTERVAL" conditionType="sap.ui.comp.config.condition.DateRangeType" />


								<config:FilterControlConfiguration key="DTR_SINGLE_d-f_Date" conditionType="sap.ui.comp.config.condition.DateRangeType" />
								<config:FilterControlConfiguration key="DTR_MULTIPLE_d-f_Date" conditionType="sap.ui.comp.config.condition.DateRangeType" />
								<config:FilterControlConfiguration key="DTR_INTERVAL_d-f_Date" conditionType="sap.ui.comp.config.condition.DateRangeType" />
								<config:FilterControlConfiguration key="DTR_AUTO_d-f_Date" conditionType="sap.ui.comp.config.condition.DateRangeType" />
							</smarttable:filterControlConfiguration>
						</smarttable:SmartTable>
					</Panel>
				</l:VerticalLayout>
				<l:VerticalLayout width="50%">
					<Panel expandable="true" expanded="true" width="100%" class="sapUiResponsiveMargin" headerText="Filter data for SmartTable">
						<l:VerticalLayout width="50%">
							<Title text="Current filter data processed by SmartTable perso controller: " id="currentTableFilterDataController"/>
							<ce:CodeEditor id="dataTableController" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
						<l:VerticalLayout width="50%">
							<Title text="Current filter data processed by SmartTable: " id="currentSmartTableFilterData"/>
							<ce:CodeEditor id="dataTable" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
					</Panel>
				</l:VerticalLayout>
			</content>
		</Page>
	</App>
</mvc:View>
