<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:smarttable="sap.ui.comp.smarttable"
	class="sapUiSizeCompact"
	controllerName="view.Main">
	
	<App>
		<Page showHeader="false">
			<content>
				<VBox width="100%">
					<items>
						<smarttable:SmartTable id="IDSmartTable" 
							entitySet="ProductCollection" tableType="Table" tableBindingPath="oModelMNA>/"
							useVariantManagement="true" persistencyKey="PKeyApplicationUnderTestSmartTable"
							useTablePersonalisation="true" enableAutoBinding="true"
							header="ProductCollection" showRowCount="true" enableExport="false">
							<Table>
								<columns>
									<Column id="Kunnr" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
															value='\{"columnKey": "Kunnr", "leadingProperty": "Kunnr", "filterProperty": "Kunnr"}' />
										</customData>
										<Text text="Company Code" />
									</Column>
									<Column id="Bukrs" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
															value='\{"columnKey": "Bukrs", "leadingProperty": "Bukrs", "filterProperty": "Kunnr", "type": "string"}' />
										</customData>
										<Text text="Customer" />
									</Column>
									<Column id="Cnt" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
												value='\{"columnKey": "Cnt", "filterProperty": "Cnt", "leadingProperty": "Cnt", "sortProperty": "Cnt", "type": "numeric", "maxLength": "3"}' />
										</customData>
										<Text text="Amount" />
									</Column>
									<Column id="BUDAT" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
												value='\{"columnKey": "BUDAT",  "filterProperty": "BUDAT", "leadingProperty": "BUDAT", "type": "date", "nullable": "false"}' />
										</customData>
										<Text text="Posting Date" />
									</Column>
									<Column id="MyBoolean" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
												value='\{"columnKey": "MyBoolean", "filterProperty": "MyBoolean", "leadingProperty": "MyBoolean", "type": "boolean"}' />
										</customData>
										<Text text="Validated" />
									</Column>
									<Column id="Time" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
												value='\{"columnKey": "Time", "filterProperty": "Time", "leadingProperty": "Time", "type": "time"}' />
										</customData>
										<Text text="Posting Time" />
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<Text text="{oModelMNA>Kunnr}" />
										</cells>
										<cells>
											<Text text="{oModelMNA>Bukrs}" />
										</cells>
										<cells>
											<Text text="{oModelMNA>Cnt}" />
										</cells>
										<cells>
											<Text text="{oModelMNA>BUDAT}" />
										</cells>

										<cells>
											<Text text="{oModelMNA>MyBoolean}" />
										</cells>
										<cells>
											<Text text="{oModelMNA>Time}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</smarttable:SmartTable>
					</items>
				</VBox>
			</content>
		</Page>
	</App>

</mvc:View>
