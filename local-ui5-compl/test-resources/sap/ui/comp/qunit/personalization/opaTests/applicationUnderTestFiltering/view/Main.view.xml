<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:sc="sap.ui.comp.smartchart"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smarttable="sap.ui.comp.smarttable"
	xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
	class="sapUiSizeCompact"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:l="sap.ui.layout"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="view.Main">

	<App>
		<Page showHeader="false">
			<content>
				<l:VerticalLayout width="50%">
					<Panel expandable="true" expanded="true" width="100%" class="sapUiResponsiveMargin" headerText="SmartTable">
						<smartfilterbar:SmartFilterBar id="smartFilterBar" entitySet="Product">
							<smartfilterbar:customData>
								<core:CustomData key="defaultFilterBarExpanded" value='{"VH_many_filters": "true"}'/>
								<core:CustomData key="defaultShowAllFilters" value='{"VH_many_filters": "true"}'/>
								<core:CustomData key="showSelectAll" value='true'/>
							</smartfilterbar:customData>
							<smartfilterbar:controlConfiguration>
								<smartfilterbar:ControlConfiguration key="STRING_MULTIPLE_VLTX_FL" displayBehaviour="idOnly" visibleInAdvancedArea="true"/>
								<smartfilterbar:ControlConfiguration key="STRING_MULTIPLE_VLTX_FL_CT" controlType="dropDownList" visibleInAdvancedArea="true"/>
								<smartfilterbar:ControlConfiguration key="VH_many_filters" visibleInAdvancedArea="true"/>
								<smartfilterbar:ControlConfiguration key="Amount" visibleInAdvancedArea="true"/>
								<smartfilterbar:ControlConfiguration key="Currency" visibleInAdvancedArea="true"/>
								<smartfilterbar:ControlConfiguration key="SupplierName">
									<smartfilterbar:customControl>
										<ComboBox
											id="customComboBox"
											customData:hasValue="true"
											selectedKey="0001"
											items="{
												path: '/StringVHVLTX'
											}">
											<core:Item key="{KEY}" text="{TXT}" />
										</ComboBox>
									</smartfilterbar:customControl>
								</smartfilterbar:ControlConfiguration>
								<smartfilterbar:ControlConfiguration key="CREATION_DATE"
									visible="hidden"
									conditionType="{
										module: 'sap.ui.comp.config.condition.DateRangeType',
										defaultOperation: 'TODAY'
									}"/>
							</smartfilterbar:controlConfiguration>
						</smartfilterbar:SmartFilterBar>
						<smarttable:SmartTable id="IDSmartTable" tableType="AnalyticalTable" editable="false"
							enableAutoBinding="true" entitySet="Product" initialise="enableCETable" smartFilterId="smartFilterBar"
							useVariantManagement="true" persistencyKey="PKeyTable"
							useTablePersonalisation="true" header="Product" showRowCount="true" enableExport="false">
							<smarttable:customData>
								<core:CustomData key="defaultFilterBarExpanded" value='true'/>
								<core:CustomData key="defaultShowAllFilters" value='true'/>
							</smarttable:customData>
							<Table>
								<columns>
									<Column id="DateCustom" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
															 value='\{"columnKey": "DateCustom","type": "date", "filterProperty": "DateCustom", "leadingProperty": "DateCustom", "sortProperty": "DateCustom"}' />
										</customData>
										<Text text="Date Custom" />
									</Column>
									<Column id="StringCustom" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
															 value='\{"columnKey": "StringCustom", "filterProperty": "StringCustom", "leadingProperty": "StringCustom", "sortProperty": "StringCustom"}' />
										</customData>
										<Text text="String Custom" />
									</Column>
									<Column id="StringCustomNullable" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
															 value='\{"columnKey": "StringCustomNullable", "filterProperty": "StringCustomNullable", "leadingProperty": "StringCustomNullable", "sortProperty": "StringCustomNullable"}' />
										</customData>
										<Text text="String Custom Nullable" />
									</Column>
									<Column id="StringCustom2" hAlign="Begin">
										<customData>
											<core:CustomData key="p13nData"
															 value='\{"columnKey": "string.test:Custom/test1.string2", "filterProperty": "StringCustom2", "leadingProperty": "StringCustom2", "sortProperty": "StringCustom2"}' />
										</customData>
										<Text text="String Custom Column Key" />
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<Text text="{DateCustom}" />
										</cells>
										<cells>
											<Text text="{StringCustom}" />
										</cells>
										<cells>
											<Text text="{StringCustomNullable}" />
										</cells>
										<cells>
											<Text text="{StringCustom2}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</smarttable:SmartTable>
					</Panel>
				</l:VerticalLayout>
				<l:VerticalLayout width="50%">
					<Panel expandable="true" expanded="false" width="100%" class="sapUiResponsiveMargin" headerText="SmartChart">
						<sc:SmartChart id="IDSmartChart" enableAutoBinding="true" entitySet="Product"
							useVariantManagement="true" initialized="enableCEChart"
							persistencyKey="PKeyChart" useChartPersonalisation="true"
							header="" showFullScreenButton="false" selectionMode="Multi" showChartTooltip="false"
							showDrillBreadcrumbs="false" showDetailsButton="false" showDrillButtons="true"
							showSemanticNavigationButton="false" ignoreFromPersonalisation="ProductPicUrl"/>
					</Panel>
				</l:VerticalLayout>
				<l:VerticalLayout width="50%">
					<Panel expandable="true" expanded="true" width="100%" class="sapUiResponsiveMargin" headerText="Filter data for SmartTable">
						<l:VerticalLayout width="50%">
							<Title text="Current filter data processed by SmartTable perso controller: " id="currentTableFilterDataController"/>
							<ce:CodeEditor id="dataTableController" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
						<l:VerticalLayout width="50%">
							<Title text="Current filter data processed by SmartTable: " id="currentSmartTableFilterData"/>
							<ce:CodeEditor id="dataTable" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
					</Panel>
				</l:VerticalLayout>
				<l:VerticalLayout width="50%">
					<Panel expandable="true" expanded="false" width="100%" class="sapUiResponsiveMargin" headerText="Filter data for SmartChart">
						<l:VerticalLayout width="50%">
							<Title text="Current filter data processed by SmartChart perso controller: " id="currentSmartChartFilterDataController"/>
							<ce:CodeEditor id="dataChartController" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
						<l:VerticalLayout width="50%">
							<Title text="Current filter data processed by SmartChart: " id="currentSmartChartFilterData"/>
							<ce:CodeEditor id="dataChart" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
					</Panel>
				</l:VerticalLayout>
			</content>
		</Page>
	</App>
</mvc:View>
