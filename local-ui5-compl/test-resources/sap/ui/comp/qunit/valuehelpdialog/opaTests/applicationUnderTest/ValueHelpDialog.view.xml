<mvc:View controllerName="test.sap.ui.comp.valuehelpdialog.ValueHelpDialog"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput" height="100%">
	<VBox>
		<smartForm:SmartForm id="smartForm" editable="true" title="Smart Form">
			<smartForm:Group>
				<smartForm:GroupElement>
					<smartMultiInput:SmartMultiInput id="MI" value="{Name}" entitySet="Employees" supportRanges="true" />
					<smartField:SmartField id="SF1" value="{Department}" />
				</smartForm:GroupElement>
			</smartForm:Group>
		</smartForm:SmartForm>
		<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="WhitespaceSet" useToolbar="false">
			<smartFilterBar:controlConfiguration>
				<smartFilterBar:ControlConfiguration
						key="Text"
						visibleInAdvancedArea="true"/>
				<smartFilterBar:ControlConfiguration
						key="Authors"
						visibleInAdvancedArea="true"/>
				<smartFilterBar:ControlConfiguration
						key="Books"
						visibleInAdvancedArea="true"/>
			</smartFilterBar:controlConfiguration>
		</smartFilterBar:SmartFilterBar>
		<Button id="openWithSmartTable" text="With SmartTable" press=".openWithSmartTable"/>
	</VBox>
</mvc:View>
