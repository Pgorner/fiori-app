<mvc:View controllerName="applicationUnderTest.smartfilterbar_DDR_OutParameters.SmartFilterBar"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:sv="sap.ui.comp.smartvariants"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" height="100%">

	<App>
		<pages>
			<f:DynamicPage id="dynamicPage" class="sapUiSizeCompact">
				<f:title>
					<f:DynamicPageTitle>
						<f:heading>
							<sv:SmartVariantManagement id="__SVM01" persistencyKey="smartfilterbar_DDR_OutParameters" showShare="true" entitySet="ZEPM_C_SALESORDERITEMQUERYResults" showExecuteOnSelection="true" />
						</f:heading>
						<f:snappedContent>
							<Text id="statusText" />
						</f:snappedContent>

					</f:DynamicPageTitle>
				</f:title>
				<f:header>
					<f:DynamicPageHeader id="DPH">
						<f:content>
							<smartFilterBar:SmartFilterBar id="smartFilterBar"
														   advancedMode="false"
														   smartVariant="__SVM01"
														   persistencyKey="smartfilterbar_DDR_OutParameters_sfb"
														   initialized="onInitialized"
														   clear="onClear"
														   cancel="onCancel"
														   search="onSearch"
														   liveMode="false"
														   considerAnalyticalParameters="true"
														   showRestoreOnFB="true"
														   assignedFiltersChanged="onAssignedFiltersChanged"
														   entitySet="MyEntitySet"
														   useToolbar="false"
														   enableBasicSearch="true"
														   showMessages="true">
								<smartFilterBar:layoutData>
									<FlexItemData shrinkFactor="0" />
								</smartFilterBar:layoutData>
								<smartFilterBar:controlConfiguration>
									<smartFilterBar:ControlConfiguration key="STRING_OUT" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_OUT_MULTIPLE" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_OUT_INTERVAL" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_OUT_AUTO" visibleInAdvancedArea="true"/>


									<smartFilterBar:ControlConfiguration key="STRING_INOUT" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_INOUT_MULTIPLE" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_INOUT_INTERVAL" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_INOUT_AUTO" visibleInAdvancedArea="true"/>

									<smartFilterBar:ControlConfiguration key="STRING_MULTI_OUT" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_MULTI_OUT_MULTIPLE" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_MULTI_OUT_INTERVAL" visibleInAdvancedArea="true"/>
									<smartFilterBar:ControlConfiguration key="STRING_MULTI_OUT_AUTO" visibleInAdvancedArea="true"/>
									
									<smartFilterBar:ControlConfiguration key="DTR_SINGLE" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_MULTIPLE" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_INTERVAL" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_AUTO" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />

									<smartFilterBar:ControlConfiguration key="DTR_SINGLE_INOUT" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_MULTIPLE_INOUT" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_INTERVAL_INOUT" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_AUTO_INOUT" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />


									<smartFilterBar:ControlConfiguration key="CostCenter" visibleInAdvancedArea="true"  />
									<smartFilterBar:ControlConfiguration key="FixedDate_DDR" visibleInAdvancedArea="true" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="FixedDate_DatePicker" visibleInAdvancedArea="true" />
								</smartFilterBar:controlConfiguration>
							</smartFilterBar:SmartFilterBar>
						</f:content>
					</f:DynamicPageHeader>
				</f:header>
				<f:content>

					<VBox>
						<Panel expandable="false" expanded="true" width="auto" class="sapUiResponsiveMargin" headerText="Actions">
							<l:Grid containerQuery="true" defaultSpan="XL6 L6 M12">
								<l:VerticalLayout width="100%">
									<Button id="changeModelDefaultCountMode" text="Change Model defaultCountMode to None" press="onChangeModelDefaultCountMode" />
									<Button id="changeModelDefaultCountModeRequest" text="Change Model defaultCountMode to Request" press="onChangeModelDefaultCountModeRequest" />
								</l:VerticalLayout>
							</l:Grid>
						</Panel>
						<Panel expandable="false" expanded="false" width="auto" class="sapUiResponsiveMargin" headerText="FilterProvider">
							<l:Grid containerQuery="true" defaultSpan="XL6 L6 M12">
								<l:VerticalLayout width="100%">
									<Title text="FilterProvider.model.oData:" />
									<ce:CodeEditor id="filterProviderOdata" width="100%" height="300px" type="jsoniq" value=""/>
								</l:VerticalLayout>
								<l:VerticalLayout width="100%">
									<HBox fitContainer="true">
										<Title text="get/setFilterData:" />
										<Button id="setfilterDataAsString" text="setFilterDataAsString" press="onSetFilterDataAsString" />
										<Button id="setfilterData" text="Test setFilterData(getFilterData()))" press="onSetFilterData" />
									</HBox>
									<ce:CodeEditor id="outputAreagetFilterData" width="100%" height="300px" type="jsoniq" value=""/>
								</l:VerticalLayout>
							</l:Grid>
						</Panel>

						<Panel expandable="false" expanded="true" width="auto" class="sapUiResponsiveMargin">
							<Title text="Request URL (including Parameters):" />
							<Text id="outputAreaUrl" width="100%" />

							<Title text="Filters:" />
							<Text id="outputAreaFilters" width="100%" />
						</Panel>
						<Panel expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin" headerText="UIState and TextValues">
							<l:Grid containerQuery="true" defaultSpan="XL6 L6 M12">
								<l:VerticalLayout width="100%">
									<Title text="UIState (DateSuiteFormat):" />
									<ce:CodeEditor id="outputAreaDataSuite" width="100%" height="300px" type="jsoniq" value=""/>
								</l:VerticalLayout>
								<l:VerticalLayout width="100%">
									<Title text="Values:" />
									<ce:CodeEditor id="outputAreaValueTexts" width="100%" height="300px" type="jsoniq" value=""/>
								</l:VerticalLayout>
							</l:Grid>
						</Panel>

						<Panel expandable="true" expanded="false" width="auto" class="sapUiResponsiveMargin">
							<l:Grid containerQuery="true" defaultSpan="XL6 L6 M12">
								<l:VerticalLayout width="100%">
									<Text text="SelectionVariant:" />
									<HBox fitContainer="true">
										<Button id="toSelectionVariant" text="Convert to SelectionVariant" press="onCreateToSelectionVariant" />
									</HBox>
									<ce:CodeEditor id="outputAreaToSelectionVariant" width="100%" height="300px" type="jsoniq" value=""/>
								</l:VerticalLayout>

								<l:VerticalLayout width="100%">
									<Text text="Applied SelectionVariant:" />
									<HBox fitContainer="true">
										<Button id="fromSelectionVariant" text="Assign to FilterBar" press="onCreatetFromSelectionVariant" />
									</HBox>
									<ce:CodeEditor id="outputAreaFromSelectionVariant" width="100%" height="300px" type="jsoniq" value=""/>
								</l:VerticalLayout>
							</l:Grid>
						</Panel>
					</VBox>
				</f:content>
			</f:DynamicPage>
		</pages>
	</App>
</mvc:View>
