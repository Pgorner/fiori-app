<mvc:View xmlns="sap.m"
		   xmlns:mvc="sap.ui.core.mvc"
		   xmlns:sfb="sap.ui.comp.smartfilterbar"
		   controllerName="applicationUnderTest.smartfilterbar_InitialValueIsSignificant.SmartFilterBar"
		   height="100%">
<App>
	<Page showHeader="false">
		<sfb:SmartFilterBar
				id="smartFilterBar"
				entitySet="MyEntitySet"
				search="onSearch"
				useToolbar="false">
			<sfb:controlConfiguration>
				<sfb:ControlConfiguration
						key="STRING_InitialValueIsSignificant"
						visibleInAdvancedArea="true"/>
				<sfb:ControlConfiguration
						key="STRING_InitialValueIsSignificantFalse"
						visibleInAdvancedArea="true"/>
				<sfb:ControlConfiguration
						key="STRING_AUTO"
						visibleInAdvancedArea="true"/>
			</sfb:controlConfiguration>
		</sfb:SmartFilterBar>
		<Text id="filterResult"/>
	</Page>
</App>
</mvc:View>
