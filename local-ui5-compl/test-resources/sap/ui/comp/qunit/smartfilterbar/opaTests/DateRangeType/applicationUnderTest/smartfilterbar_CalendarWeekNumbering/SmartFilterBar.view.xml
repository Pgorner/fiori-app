<mvc:View controllerName="applicationUnderTest.smartfilterbar_CalendarWeekNumbering.SmartFilterBar"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:sv="sap.ui.comp.smartvariants"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" height="100%">

	<App>
		<pages>
			<f:DynamicPage id="dynamicPage" class="sapUiSizeCompact">
				<f:title>
					<f:DynamicPageTitle>
						<f:actions>
							<Button id="showAllFilterFields" text="Show All Filters" press="onShowAllFilterFields" />
						</f:actions>
						<f:heading>
							<sv:SmartVariantManagement id="__SVM01" persistencyKey="smartfilterbar_DateTypes" showShare="true" entitySet="ZEPM_C_SALESORDERITEMQUERYResults" showExecuteOnSelection="true" />
						</f:heading>
						<f:snappedContent>
							<Text id="statusText" />
						</f:snappedContent>

					</f:DynamicPageTitle>
				</f:title>
				<f:header>
					<f:DynamicPageHeader>
						<f:content>
							<smartFilterBar:SmartFilterBar id="smartFilterBar"
														   advancedMode="false"
														   smartVariant="__SVM01"
														   persistencyKey="smartfilterbar_DateTypes_sfb"
														   clear="onClear"
														   reset="onRestore"
														   cancel="onCancel"
														   search="onSearch"
														   liveMode="false"
														   considerAnalyticalParameters="true"
														   showRestoreOnFB="true"
														   entitySet="ZEPM_C_SALESORDERITEMQUERYResults"
														   useToolbar="false"
														   enableBasicSearch="false">

								<smartFilterBar:customData>
									<core:CustomData key="dateFormatSettings" value='\{"UTC":false, "style":"short"\}' />
									<core:CustomData key="calendarWeekSettings" value='MiddleEastern' />
									<core:CustomData key="showCurrentDateButton" value='true' />
								</smartFilterBar:customData>

								<smartFilterBar:layoutData>
									<FlexItemData shrinkFactor="0" />
								</smartFilterBar:layoutData>

								<smartFilterBar:controlConfiguration>

									<smartFilterBar:ControlConfiguration key="DTR_SINGLE" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_MULTIPLE" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_INTERVAL" conditionType="sap.ui.comp.config.condition.DateRangeType" />
									<smartFilterBar:ControlConfiguration key="DTR_AUTO" conditionType="sap.ui.comp.config.condition.DateRangeType" />

								</smartFilterBar:controlConfiguration>

							</smartFilterBar:SmartFilterBar>

						</f:content>
					</f:DynamicPageHeader>
				</f:header>
			</f:DynamicPage>
		</pages>
	</App>
</mvc:View>
