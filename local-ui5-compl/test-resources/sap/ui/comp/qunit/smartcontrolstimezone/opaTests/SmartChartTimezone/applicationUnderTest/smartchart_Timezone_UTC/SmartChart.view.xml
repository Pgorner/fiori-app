<mvc:View controllerName="applicationUnderTest.smartchart_Timezone_UTC.SmartChart"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:smartchart="sap.ui.comp.smartchart"
	height="100%"
>
	<App>
		<pages>
			<f:DynamicPage toggleHeaderOnTitleClick="false" class="sapUiSizeCompact">
				<f:title>
					<f:DynamicPageTitle>
						<f:actions>
							<Label text="FLP Timezone" class="sapUiSmallMarginEnd" />
							<Text id="FLPtimezoneText" />
							<Label text="System Timezone" class="sapUiSmallMarginEnd" />
							<Text id="systemTimezoneText" />
						</f:actions>
					</f:DynamicPageTitle>
				</f:title>
				<f:header>
					<f:DynamicPageHeader pinnable="false">
						<f:content>
							<HBox>
								<VBox class="sapUiLargeMarginEnd">
									<Title text="Actions" />
									<ComboBox id="changeVisibleField" placeholder="Change Visible Field" change="onChangeVisibleField" items="{
										path: 'fieldTypes>/',
										sorter: { path: 'groupOrder', descending: false, group: '._getGroup'},
										groupHeaderFactory: '._getGroupHeader'
									}">
										<items>
											<core:Item key="{fieldTypes>key}" text="{fieldTypes>text}" />
										</items>
									</ComboBox>
									<Button text="Update results" press="onUpdateResults" />
									<Button text="Reset" press="onReset" />
									<Button text="applyVariant (with Date)" press="onApplyVariant(true)" />
									<Button text="applyVariant (with String)" press="onApplyVariant(false)" />
									<Button text="applyVariant(fetchVariant)" press="onApplyVariantFetchVariant" />
									<Button text="setUiState(getUiState())" press="onSetUiStateGetUiState" />
								</VBox>
								<VBox class="sapUiLargeMarginBegin" items="{resultsView>/}">
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>

									<items>
										<HBox fitContainer="true" alignItems="Center">
											<Label labelFor="{resultsView>inputId}" text="{resultsView>labelText}" class="sapUiSmallMarginEnd">
												<layoutData>
													<FlexItemData baseSize="120px" />
												</layoutData>
											</Label>
											<Input placeholder="{resultsView>labelText}" value="{ path: 'resultsView>inputId', formatter: '._formatInputValue' }">
												<layoutData>
													<FlexItemData growFactor="1" />
												</layoutData>
											</Input>
										</HBox>
									</items>
								</VBox>
							</HBox>
						</f:content>
					</f:DynamicPageHeader>
				</f:header>
				<f:content>
					<smartchart:SmartChart id ="smartChart" enableAutoBinding="true"
										   entitySet="ZEPM_C_SALESORDERITEMQUERYNoParamsResults" useVariantManagement="true"
										   persistencyKey="PKeyChartExample9" useChartPersonalisation="true"
										   header="" showFullScreenButton="true" selectionMode="Multi"
										   showChartTooltip="true" showDrillBreadcrumbs="false"
										   showDetailsButton="false" showDrillButtons="true"
										   showSemanticNavigationButton="true"
										   height="100%">
						<smartchart:customData>
							<core:CustomData key="dateFormatSettings" value='\{"UTC":true, "style":"short"\}' />
						</smartchart:customData>
					</smartchart:SmartChart>
				</f:content>
			</f:DynamicPage>
		</pages>
	</App>
</mvc:View>
