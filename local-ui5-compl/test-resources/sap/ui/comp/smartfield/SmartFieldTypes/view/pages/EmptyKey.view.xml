<mvc:View
	controllerName="test.sap.ui.comp.smartfield.SmartFieldTypes.controller.EmptyKey"
	xmlns="sap.m"
	xmlns:semantic="sap.m.semantic"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:l="sap.ui.layout"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartForm="sap.ui.comp.smartform">

  <SplitApp id="app">
		<masterPages>
			<semantic:MasterPage>
				<List id="masterList" mode="SingleSelectMaster" selectionChange="onProductSelect" headerText="Types" includeItemInSelection="true" noDataText="No products" items="{path: '/EmptyKey'}">
					<items>
						<StandardListItem title="{ID}"/>
					</items>
				</List>
			</semantic:MasterPage>
		</masterPages>
		<detailPages>
			<semantic:DetailPage id="detail"
								title="Empty value for keys page"
								showNavButton="true"
								navButtonPress=".onNavBack">
				<VBox>
					<smartForm:SmartForm id="form" validationMode="Async" editTogglable="true"  editable="true">
						<smartForm:layout>
							<smartForm:ColumnLayout id="FormLayout" columnsXL="4" columnsL="3" columnsM="2"/>
						</smartForm:layout>
						<smartForm:Group title="TextArrangement Handling Empty Keys">
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey1None" value="{EmptyKey1}" textLabel="Value List standard - None" textInEditModeSource="None" suppressEmptyStringRequest="false"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey1ValueList" value="{EmptyKey1}" textLabel="Value List standard - ValueList" textInEditModeSource="ValueList" suppressEmptyStringRequest="false"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey1ValueListNoValidation" value="{EmptyKey1}" textLabel="Value List standard - ValueListNoValidation" textInEditModeSource="ValueListNoValidation" suppressEmptyStringRequest="false"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey2None" value="{EmptyKey2}" textLabel="Value List fixed-values - None" textInEditModeSource="None"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey2ValueList" value="{EmptyKey2}" textLabel="Value List fixed-values - ValueList" textInEditModeSource="ValueList"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey2ValueListNoValidation" value="{EmptyKey2}" textLabel="Value List fixed-values - ValueListNoValidation" textInEditModeSource="ValueListNoValidation"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
						</smartForm:Group>

						<smartForm:Group title="TextArrangement Handling Empty Keys not Nullable">
							<!-- <smartForm:GroupElement>
								<smartField:SmartField id="emptyKey3None" value="{EmptyKey3}" textLabel="Value List standard - None" textInEditModeSource="None"/>
							</smartForm:GroupElement> -->
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey3ValueList" value="{EmptyKey3}" textLabel="Value List standard - ValueList" textInEditModeSource="ValueList"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey3ValueListNoValidation" value="{EmptyKey3}" textLabel="Value List standard - ValueListNoValidation" textInEditModeSource="ValueListNoValidation"
								change="updateCodeEditors"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey4None" value="{EmptyKey4}" textLabel="Value List fixed-values - None" textInEditModeSource="None"
								change="updateCodeEditors"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey4ValueList" value="{EmptyKey4}" textLabel="Value List fixed-values - ValueList" textInEditModeSource="ValueList"
								change="updateCodeEditors"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="emptyKey4ValueListNoValidation" value="{EmptyKey4}" textLabel="Value List fixed-values - ValueListNoValidation" textInEditModeSource="ValueListNoValidation"
								change="updateCodeEditors"/>
							</smartForm:GroupElement>
						</smartForm:Group>
						<smartForm:Group>
							<smartForm:GroupElement>
								<smartField:SmartField id="sf1" value="{textInEditModeSourceNone}" textLabel="Value List fixed-values - textInEditModeSource None" textInEditModeSource="None"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="sf2" value="{textInEditModeSourceValueList}" textLabel="Value List fixed-values - textInEditModeSource ValueList" textInEditModeSource="ValueList"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="sf3" value="{textInEditModeSourceNoValidation}" textLabel="Value List fixed-values - textInEditModeSource ValueListNoValidation" textInEditModeSource="ValueListNoValidation"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="sf4" value="{textInEditModeSourceWarning}" textLabel="Value List fixed-values - textInEditModeSource ValueListWarning" textInEditModeSource="ValueListWarning"
								change="updateCodeEditors" />
							</smartForm:GroupElement>
						</smartForm:Group>
					</smartForm:SmartForm>
				</VBox>
				<VBox>
					<Panel expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin" headerText="Data">
						<l:VerticalLayout width="100%">
							<Title text="Current data: " id="currentSF"/>
							<ce:CodeEditor id="outputAreaChangedData" width="100%" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
					</Panel>
				</VBox>
				<HBox>
					<Button id="clearRequestsLog" text="Clear Requests LOG" press=".clearRequestsLog" class="sapUiSmallMarginEnd"/>
				</HBox>
				<List id="requests" headerText="Requests LOG:"/>
				<HBox>
					<Button id="clearEventsLog" text="Clear Events LOG" press=".clearEventsLog" class="sapUiSmallMarginEnd"/>
				</HBox>
				<List id="events" headerText="Events LOG:"/>

				<semantic:positiveAction>
					<semantic:PositiveAction id="btnCreateTempEntry" text="Create temp product"/>
				</semantic:positiveAction>
				<semantic:negativeAction>
					<semantic:NegativeAction id="btnRemoveBindingContext" text="Remove bindingContext" press=".onBindingContextRemove"/>
				</semantic:negativeAction>
				<semantic:editAction>
					<semantic:EditAction id="btnEdit" press="onEditPressed" visible="{= !${view>/editMode}}"/>
				</semantic:editAction>
				<semantic:saveAction>
					<semantic:SaveAction id="btnSave" press="onSavePressed" visible="{view>/editMode}"/>
				</semantic:saveAction>
				<semantic:cancelAction>
					<semantic:CancelAction id="btnCancel" press="onCancelPressed" visible="{view>/editMode}"/>
				</semantic:cancelAction>
			</semantic:DetailPage>
		</detailPages>
	</SplitApp>
</mvc:View>