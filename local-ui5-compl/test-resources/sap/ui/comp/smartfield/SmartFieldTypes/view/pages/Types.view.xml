<mvc:View
	controllerName="test.sap.ui.comp.smartfield.SmartFieldTypes.controller.Types"
	xmlns="sap.m"
	xmlns:semantic="sap.m.semantic"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:l="sap.ui.layout"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartForm="sap.ui.comp.smartform">
	<SplitApp id="app">
		<masterPages>
			<semantic:MasterPage>
				<List id="masterList" mode="SingleSelectMaster" selectionChange="onProductSelect" headerText="Types" includeItemInSelection="true" noDataText="No products" items="{path: '/Types'}">
					<items>
						<StandardListItem title="{ID}"/>
					</items>
				</List>
			</semantic:MasterPage>
		</masterPages>
		<detailPages>
			<semantic:DetailPage id="detail"
								title="Misc types page"
								showNavButton="true"
								navButtonPress=".onNavBack">
				<VBox>
					<smartForm:SmartForm id="form" validationMode="Async" editTogglable="true" editable="{view>/editMode}">
						<smartForm:layout>
							<smartForm:ColumnLayout id="FormLayout" columnsXL="4" columnsL="3" columnsM="2"/>
						</smartForm:layout>
						<smartForm:Group>
							<smartForm:GroupElement>
								<smartField:SmartField id="date" value="{DATE}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="dateTime" value="{DATETIME}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="time" value="{TIME}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="dtOffset" value="{DTOFFSET}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="dtOffsetTimeZone" value="{DTOFFSETTIMEZONE}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="stringDate" value="{STRINGDATE}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="string" value="{STRING}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="string_no_vhd" value="{STRING_NO_VHD}" showValueHelp="false" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="stringMandatory" value="{STRINGMANDATORY}" clientSideMandatoryCheck="false" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="stringUpperCase" value="{STRINGUPPERCASE}" width="14rem"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="decimal" value="{DECIMAL}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="double" value="{DOUBLE}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="int16" value="{INT16}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="byte" value="{BYTE}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="bool" value="{BOOL}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="CurrencyCode" value="{CurrencyCode}" placeholder="Placeholder property text" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="CurrencyCodeFixedValues" value="{CurrencyCodeFixedValues}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="CurrencyCodeDeprecationCodeValues" value="{CurrencyCodeDeprecationCodeValues}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="Currency" value="{Currency}"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="CurrencyMandatory" value="{CurrencyMandatory}" clientSideMandatoryCheck="false"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="Quantity" value="{Quantity}"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="stringFixed" value="{STRINGFIXED}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="fieldTarget" value="{FieldTarget}"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="fieldControl" value="{FieldControl}"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="displayModeControl" value="{DisplayModeControl}" editable="false"/>
								<smartField:SmartField id="editModeControl" value="{EditModeControl}" editable="true"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="linkPress" value="{LinkPress}" linkPress=".onLinkPress" />
							</smartForm:GroupElement>
						</smartForm:Group>
					</smartForm:SmartForm>
				</VBox>
				<VBox>
					<Panel expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin" headerText="Data">
						<l:VerticalLayout width="100%">
							<Title text="Current data: " id="currentSF"/>
							<ce:CodeEditor id="outputAreaChangedData" width="100%" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
					</Panel>
				</VBox>
				<HBox>
					<Button id="clearRequestsLog" text="Clear Requests LOG" press=".clearRequestsLog" class="sapUiSmallMarginEnd"/>
				</HBox>
				<List id="requests" headerText="Requests LOG:"/>
				<HBox>
					<Button id="clearEventsLog" text="Clear Events LOG" press=".clearEventsLog" class="sapUiSmallMarginEnd"/>
				</HBox>
				<List id="events" headerText="Events LOG:"/>

				<semantic:positiveAction>
					<semantic:PositiveAction id="btnCreateTempEntry" text="Create temp product"/>
				</semantic:positiveAction>
				<semantic:negativeAction>
					<semantic:NegativeAction id="btnRemoveBindingContext" text="Remove bindingContext" press=".onBindingContextRemove"/>
				</semantic:negativeAction>
				<semantic:editAction>
					<semantic:EditAction id="btnEdit" press="onEditPressed" visible="{= !${view>/editMode}}"/>
				</semantic:editAction>
				<semantic:saveAction>
					<semantic:SaveAction id="btnSave" press="onSavePressed" visible="{view>/editMode}"/>
				</semantic:saveAction>
				<semantic:cancelAction>
					<semantic:CancelAction id="btnCancel" press="onCancelPressed" visible="{view>/editMode}"/>
				</semantic:cancelAction>
			</semantic:DetailPage>
		</detailPages>
	</SplitApp>
</mvc:View>
