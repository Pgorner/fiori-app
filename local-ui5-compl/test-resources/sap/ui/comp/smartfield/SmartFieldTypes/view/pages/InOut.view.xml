<mvc:View
	controllerName="test.sap.ui.comp.smartfield.SmartFieldTypes.controller.InOut"
	xmlns="sap.m"
	xmlns:semantic="sap.m.semantic"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:l="sap.ui.layout"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartForm="sap.ui.comp.smartform">
	<SplitApp id="app">
		<masterPages>
			<semantic:MasterPage>
				<List id="masterList" mode="SingleSelectMaster" selectionChange="onProductSelect" headerText="Types" includeItemInSelection="true" noDataText="No products" items="{path: '/InOut'}">
					<items>
						<StandardListItem title="{ID}"/>
					</items>
				</List>
			</semantic:MasterPage>
		</masterPages>
		<detailPages>
			<semantic:DetailPage id="detail"
								title="InOut parameters page"
								showNavButton="true"
								navButtonPress=".onNavBack">
				<VBox>
					<smartForm:SmartForm id="form" validationMode="Async" editTogglable="true" editable="{view>/editMode}">
						<smartForm:layout>
							<smartForm:ColumnLayout id="FormLayout" columnsXL="4" columnsL="3" columnsM="2"/>
						</smartForm:layout>
						<smartForm:Group title="In/Out">
							<smartForm:GroupElement>
								<smartField:SmartField id="inKey" value="{InKey}" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="key" value="{Key}" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="key2" value="{Key2}" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="key3" value="{Key3}" width="14rem" change="updateCodeEditors">
									<smartField:configuration>
										<smartField:Configuration controlType="selection"/>
									</smartField:configuration>
								</smartField:SmartField>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="smartLink" value="{SmartLink}"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outDate" value="{OutDate}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outTime" value="{OutTime}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outDateTime" value="{OutDateTime}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outStringDate" value="{OutStringDate}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outDecimal" value="{OutDecimal}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outDouble" value="{OutDouble}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outInt16" value="{OutInt16}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outByte" value="{OutByte}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>

							<smartForm:GroupElement>
								<smartField:SmartField id="outBool" value="{OutBool}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>
							<smartForm:GroupElement>
								<smartField:SmartField id="numcField" value="{NumcField}" contextEditable="true" width="14rem" change="updateCodeEditors"/>
							</smartForm:GroupElement>
						</smartForm:Group>
					</smartForm:SmartForm>
				</VBox>
				<VBox>
					<Panel expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin" headerText="Data">
						<l:VerticalLayout width="100%">
							<Title text="Current data: " id="currentSF"/>
							<ce:CodeEditor id="outputAreaChangedData" width="100%" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
					</Panel>
				</VBox>
				<HBox>
					<Button id="clearRequestsLog" text="Clear Requests LOG" press=".clearRequestsLog" class="sapUiSmallMarginEnd"/>
				</HBox>
				<List id="requests" headerText="Requests LOG:"/>
				<HBox>
					<Button id="clearEventsLog" text="Clear Events LOG" press=".clearEventsLog" class="sapUiSmallMarginEnd"/>
				</HBox>
				<List id="events" headerText="Events LOG:"/>

				<semantic:positiveAction>
					<semantic:PositiveAction id="btnCreateTempEntry" text="Create temp product"/>
				</semantic:positiveAction>
				<semantic:negativeAction>
					<semantic:NegativeAction id="btnRemoveBindingContext" text="Remove bindingContext" press=".onBindingContextRemove"/>
				</semantic:negativeAction>
				<semantic:editAction>
					<semantic:EditAction id="btnEdit" press="onEditPressed" visible="{= !${view>/editMode}}"/>
				</semantic:editAction>
				<semantic:saveAction>
					<semantic:SaveAction id="btnSave" press="onSavePressed" visible="{view>/editMode}"/>
				</semantic:saveAction>
				<semantic:cancelAction>
					<semantic:CancelAction id="btnCancel" press="onCancelPressed" visible="{view>/editMode}"/>
				</semantic:cancelAction>
			</semantic:DetailPage>
		</detailPages>
	</SplitApp>
</mvc:View>
