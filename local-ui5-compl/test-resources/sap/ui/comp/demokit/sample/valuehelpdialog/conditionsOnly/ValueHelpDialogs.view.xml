<mvc:View height="100%" controllerName="sap.ui.comp.sample.valuehelpdialog.conditionsOnly.ValueHelpDialogs"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<form:SimpleForm editable="true">
		<Label text="ValueHelpDialog with multiple conditions" labelFor="multipleConditions"/>
		<MultiInput
			id="multipleConditions"
			valueHelpOnly="true"
			width="60%"
			valueHelpRequest=".onMultipleConditionsVHRequested"/>
		<Label text="ValueHelpDialog with single condition" labelFor="singleCondition"/>
		<MultiInput
			id="singleCondition"
			valueHelpOnly="true"
			width="60%"
			valueHelpRequest=".onSingleConditionVHRequested"/>
	</form:SimpleForm>
</mvc:View>
