<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns:sf="sap.ui.comp.smartfield"
		xmlns:m="sap.m" height="100%"
		controllerName="sap.ui.comp.sample.smartfield.ContextDependentValueHelp.Main"
		xmlns:form="sap.ui.comp.smartform">

	<m:ScrollContainer id="SC1" height="100%" horizontal="false" vertical="true">
		<m:Panel class="sapUiLargeMarginTop" headerText="Smart Field with ValueList annotation">
			<m:content>
				<m:Text class="sapUiResponsiveMargin" text="This sample explains what happens when we have a context dependent Smart Field with Value Help Dialog. Changing the state of 'Is Manager' reflects to the Variants available in the Value Help Dialog for 'Product'." />

				<form:SmartForm id="form" editable="true" binding="{/Main('1')}">
					<form:layout>
						<form:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
					</form:layout>
					<form:Group title="Smart Field with context dependent ValueList"  >
						<form:GroupElement>

							<sf:SmartField id="userType" width="60%" value="{USER_TYPE}"/>

						</form:GroupElement>
						<form:GroupElement>

							<sf:SmartField id="isManager" width="60%" value="{IS_MANAGER}"/>

						</form:GroupElement>
					</form:Group>
					<form:Group title="Smart Field with context dependent ValueList"  >
						<form:GroupElement>

							<sf:SmartField id="productId" width="60%" value="{PRODUCT_ID}"/>

						</form:GroupElement>
					</form:Group>
				</form:SmartForm>
			</m:content>
		</m:Panel>
	</m:ScrollContainer>

</mvc:View>
