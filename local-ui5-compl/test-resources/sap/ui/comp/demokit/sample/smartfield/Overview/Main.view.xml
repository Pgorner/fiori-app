<mvc:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sf="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.comp.smartform"
	xmlns:m="sap.m" height="100%" controllerName="sap.ui.comp.sample.smartfield.Overview.Main">

		<form:SmartForm id="SF1" editTogglable="true" editable="true" title="{Name}" binding="{/Products('1239102')}">
			<form:layout>
				<form:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
			</form:layout>
			<form:Group id="G1" title="Product">

				<!-- ********************************** -->
				<!-- sap:updatable="false"				-->
				<!-- ********************************** -->
				<form:GroupElement id="GE-ProductId">

					<sf:SmartField id="idProductId" value="{ProductId}"/>

				</form:GroupElement>

				<!-- ****************************************************** -->
				<!-- com.sap.vocabularies.UI.v1.MultiLineText				-->
				<!-- ****************************************************** -->
				<form:GroupElement id="GE-Description">

					<sf:SmartField id="idDescription" value="{Description}" app:multiLineSettings="{cols: 50, rows: 4}"/>

				</form:GroupElement>

				<!-- ************************************************** -->
				<!-- Edm.Boolean display behaviors						-->
				<!-- ************************************************** -->
				<form:GroupElement id="GE-Sale">

					<sf:SmartField value="{Sale}" id="idSale">
						<sf:layoutData>
							<l:GridData spanL="2" spanM="2" spanS="2"/>
						</sf:layoutData>
					</sf:SmartField>

					<sf:SmartField value="{Sale}" id="idSaleDisplay">
						<sf:layoutData>
							<l:GridData spanL="2" spanM="2" spanS="2"/>
						</sf:layoutData>
					</sf:SmartField>

					<sf:SmartField value="{Sale}" id="idSaleDisplayOnOff">
						<sf:configuration>
							<sf:Configuration displayBehaviour="OnOff"/>
						</sf:configuration>
						<sf:layoutData>
							<l:GridData spanL="2" spanM="2" spanS="2"/>
						</sf:layoutData>
					</sf:SmartField>

					<sf:SmartField value="{Sale}" id="idSaleDisplayTrueFalse">
						<sf:configuration>
							<sf:Configuration displayBehaviour="TrueFalse"/>
						</sf:configuration>
						<sf:layoutData>
							<l:GridData spanL="2" spanM="2" spanS="2"/>
						</sf:layoutData>
					</sf:SmartField>

				</form:GroupElement>

				<!-- ********************************************** -->
				<!-- Unit of measure								-->
				<!-- (sap-unit and sap:semantics="unit-of-measure") -->
				<!-- ********************************************** -->
				<form:GroupElement id="GE-Quantity">

					<sf:SmartField id="idQuantity" value="{Quantity}"/>

				</form:GroupElement>

				<!-- ************************************************************** -->
				<!-- Password (com.sap.vocabularies.Common.v1.Masked)				-->
				<!-- ************************************************************** -->
				<form:GroupElement id="GE-idPassword">

					<sf:SmartField id="idPassword" value="{Password}"/>

				</form:GroupElement>


				<form:GroupElement id="GE-Whitespace">

					<sf:SmartField id="idWhitespace" value="{Whitespace}"/>

				</form:GroupElement>

				<!-- ***************************************************************** -->
				<!-- Accessibility attribute aria-describedBy						   -->
				<!-- ***************************************************************** -->
				<form:GroupElement id="GE-AriaDescribedBy">

					<sf:SmartField id="idAriaDescribedBy" value="{AriaDescribedBy}" ariaDescribedBy="descriptionNodeId"/>

				</form:GroupElement>

				<!-- ***************************************************************** -->
				<!-- HiddenProduct (com.sap.vocabularies.UI.v1.Hidden) with Path expression -->
				<!-- ***************************************************************** -->
				<form:GroupElement id="GE-HiddenProduct">

					<sf:SmartField id="idHiddenProductID" value="{HiddenProduct}"/>

				</form:GroupElement>
			</form:Group>
			<form:Group title="Contact">
				<!-- ************************************** -->
				<!-- Name									-->
				<!-- ************************************** -->
				<form:GroupElement id="GE-Name">

					<sf:SmartField id="idName" value="{Name}" url="http://www.sap.com"/>

				</form:GroupElement>

				<!-- **************************************	-->
				<!-- E-mail									-->
				<!-- **************************************	-->
				<form:GroupElement id="GE-idEmail">

					<sf:SmartField id="idEmail" value="{Email}"/>

				</form:GroupElement>

				<!-- ************************************** -->
				<!-- Phone									-->
				<!-- ************************************** -->
				<form:GroupElement id="GE-Phone">

					<sf:SmartField id="idPhone" value="{Phone}"/>

				</form:GroupElement>

				<!-- ************************************** -->
				<!-- URL 									-->
				<!-- ************************************** -->
				<form:GroupElement id="GE-URL">

					<sf:SmartField id="idURL" value="{URL}"/>

				</form:GroupElement>
			</form:Group>
		</form:SmartForm>
		<core:InvisibleText id="descriptionNodeId" text="Additional input description refferenced by aria-describedby." />
</mvc:View>
