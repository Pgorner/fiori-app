<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:sf="sap.ui.comp.smartfield"
		xmlns:m="sap.m" height="100%"
		controllerName="sap.ui.comp.sample.smartfield.WithValueListAndParameters.Main"
		xmlns:form="sap.ui.comp.smartform">

	<m:ScrollContainer id="SC1" height="100%" horizontal="false" vertical="true">
		<m:Panel headerText="Smart Field with ValueList annotation">
			<m:content>
				<m:Text class="sapUiResponsiveMargin" text="This sample shows usage of SmartField with ValueList annotations combined with Constants and In/Out parameters" />
				<form:SmartForm id="form" editable="true" binding="{/Main('1')}">
					<form:layout>
						<form:ColumnLayout columnsM="1" columnsL="3" columnsXL="4"/>
					</form:layout>
					<form:Group title="Without any constant parameters"  >
						<form:GroupElement id="GE-code">

							<sf:SmartField id="code" width="60%" value="{CODE}"/>

						</form:GroupElement>
					</form:Group>

					<form:Group title="Constant parameter with value Asia"  >
						<form:GroupElement id="GE-codeAsia">

							<sf:SmartField id="codeAsia" width="60%" value="{CODE_ASIA}"/>

						</form:GroupElement>
					</form:Group>

					<form:Group title="Constant parameter with value Europe">
						<form:GroupElement id="GE-codeEurope">

							<sf:SmartField id="codeEurope" width="60%" value="{CODE_EUROPE}" contextEditable="true"/>

						</form:GroupElement>
					</form:Group>
					<form:Group title="In/Out Parameters rendered as Input"  >
						<form:GroupElement id="GE-inKey">

							<sf:SmartField id="inKey" width="60%" value="{InKey}" contextEditable="true"/>

						</form:GroupElement>

						<form:GroupElement id="GE-inOutKey">

							<sf:SmartField id="inOutKey" width="60%" value="{InOutKey}" contextEditable="true"/>

						</form:GroupElement>
						<form:GroupElement id="GE-outKey">

							<sf:SmartField id="outKey" width="60%" value="{OutKey}" contextEditable="true"/>

						</form:GroupElement>
					</form:Group>

					<form:Group title="In/Out Parameters rendered as ComboBox (fixed-values)">
						<form:GroupElement id="GE-inKeyFixedValues">

							<sf:SmartField id="inKeyFixedValues" width="60%" value="{InKeyFixedValues}" contextEditable="true"/>

						</form:GroupElement>
						<form:GroupElement id="GE-inOutKeyFixedValues">

							<sf:SmartField id="inOutKeyFixedValues" width="60%" value="{InOutKeyFixedValues}" contextEditable="true"/>

						</form:GroupElement>
						<form:GroupElement id="GE-outKeyFixedValues">

							<sf:SmartField id="outKeyFixedValues" width="60%" value="{OutKeyFixedValues}" contextEditable="true"/>

						</form:GroupElement>
					</form:Group>

					<form:Group title="In/Out Parameters rendered as Select">
						<form:GroupElement id="GE-inKeySelect">

							<sf:SmartField id="inKeySelect" width="60%" value="{InKeySelect}" contextEditable="true"/>

						</form:GroupElement>
						<form:GroupElement id="GE-inOutKeySelect">

							<sf:SmartField id="inOutKeySelect" width="60%" value="{InOutKeySelect}" contextEditable="true">
								<sf:configuration>
									<sf:Configuration controlType="selection"/>
								</sf:configuration>
							</sf:SmartField>

						</form:GroupElement>
						<form:GroupElement id="GE-outKeySelect">

							<sf:SmartField id="outKeySelect" width="60%" value="{OutKeySelect}" contextEditable="true"/>

						</form:GroupElement>
					</form:Group>
				</form:SmartForm>
			</m:content>
		</m:Panel>
	</m:ScrollContainer>

</mvc:View>
