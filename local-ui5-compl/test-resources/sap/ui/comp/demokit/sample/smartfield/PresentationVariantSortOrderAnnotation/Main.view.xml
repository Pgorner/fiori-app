<mvc:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sf="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:form="sap.ui.comp.smartform"
	xmlns:m="sap.m" height="100%" controllerName="sap.ui.comp.sample.smartfield.PresentationVariantSortOrderAnnotation.Main">
	<m:ScrollContainer id="SC1" height="100%" horizontal="false" vertical="true">
		<m:Panel headerText="SmartField and PresentationVariant/SortOrder Annotation">
			<m:content>
				<m:Text class="sapUiResponsiveMargin" text="This sample shows how you can change the order of the items for SmartField with fixed values using 'com.sap.vocabularies.UI.v1.PresentationVariant' annotation" />

				<form:SmartForm id="SF1" class="editableForm" editTogglable="true" editable="true" title="{Name}" binding="{/Products('001')}">
					<form:layout>
						<form:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
					</form:layout>
					<form:Group id="G1">
						<!-- ****************************************************** -->
						<!-- com.sap.vocabularies.Common.v1.ValueList				-->
						<!-- and sap:value-list="fixed-values"						-->
						<!-- ****************************************************** -->
						<form:GroupElement id="GE-Name">

							<sf:SmartField id="idName" value="{Name}"/>

						</form:GroupElement>

					</form:Group>
				</form:SmartForm>

			</m:content>
		</m:Panel>
	</m:ScrollContainer>
</mvc:View>
