<mvc:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sf="sap.ui.comp.smartfield"
	controllerName="sap.ui.comp.sample.smartfield.TextInEditModeSource.Main"
	xmlns:form="sap.ui.comp.smartform"
	xmlns:m="sap.m"
	class="mainView"
	height="100%">

	<m:ScrollContainer height="100%" horizontal="false" vertical="true">

		<form:SmartForm
				id="smartForm"
				class="editableForm"
				checkButton="true"
				editTogglable="true"
				validationMode="Async"
				editable="true"
				title="TextInEditModeSource"
				editToggled="onEditToggled">
			<form:layout>
				<form:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
			</form:layout>
			<form:customData>
				<core:CustomData key="defaultTextInEditModeSource" value="ValueList"/>
			</form:customData>


			<!-- ******************************************************************** -->
			<!-- (Product ID)														  -->
			<!-- ******************************************************************** -->
			<form:Group title="Default configuration">
				<form:GroupElement>
					<sf:SmartField
						id="idProduct"
						value="{ID}">
						<sf:customData>
							<core:CustomData key="defaultFilterBarExpanded" value='true'/>
						</sf:customData>
					</sf:SmartField>

				</form:GroupElement>
			</form:Group>

			<!-- ******************************************************************** -->
			<!-- sap.ui.comp.smartfield.TextInEditModeSource.Default				  -->
			<!-- ******************************************************************** -->
			<form:Group title="Descriptive text via defaultTextInEditModeSource">
				<form:GroupElement>
					<sf:SmartField
						id="idDefault"
						value="{CategoryID}">
						<sf:customData>
							<core:CustomData key="defaultFilterBarExpanded" value='true'/>
						</sf:customData>
					</sf:SmartField>
				</form:GroupElement>
			</form:Group>

			<!-- ******************************************************************** -->
			<!-- sap.ui.comp.smartfield.TextInEditModeSource.None					  -->
			<!-- ******************************************************************** -->
			<form:Group title="No descriptive text (None)">
				<form:GroupElement>
					<sf:SmartField
						textInEditModeSource="None"
						id="idNone"
						value="{ProductRating}"/>
				</form:GroupElement>
			</form:Group>

			<!-- ************************************************************************ -->
			<!-- sap.ui.comp.smartfield.TextInEditModeSource.NavigationProperty			  -->
			<!-- ************************************************************************ -->
			<form:Group title="Descriptive text via Navigation Property">
				<form:GroupElement>
					<sf:SmartField
						id="idNavProp"
						textInEditModeSource="NavigationProperty"
						value="{CategoryID}"/>
				</form:GroupElement>
			</form:Group>

			<!-- ************************************************************************	-->
			<!-- sap.ui.comp.smartfield.TextInEditModeSource.ValueList					    -->
			<!-- ************************************************************************	-->
			<form:Group title="Descriptive text via ValueList">
				<form:GroupElement>
					<sf:SmartField
						id="idValueList"
						value="{SupplierID}"
						textInEditModeSource="ValueList"/>
				</form:GroupElement>
			</form:Group>
			<form:Group title="Descriptive text via sap:text and ValueList">
				<form:GroupElement>
					<sf:SmartField
						id="idValueListWithText"
						value="{SupplierIDWithText}"
						textInEditModeSource="ValueList"/>
				</form:GroupElement>
			</form:Group>

			<!-- ************************************************************************	-->
			<!-- sap.ui.comp.smartfield.TextInEditModeSource.ValueListNoValidation		    -->
			<!-- ************************************************************************	-->
			<form:Group title="If avaliable descriptive text via ValueListNoValidation">
				<form:GroupElement>
					<sf:SmartField
						id="idValueListNoValidation"
						value="{SupplierIDNoValidation}"
						textInEditModeSource="ValueListNoValidation"/>
				</form:GroupElement>
			</form:Group>

			<!-- ************************************************************************	-->
			<!-- sap.ui.comp.smartfield.TextInEditModeSource.ValueListWarning    		    -->
			<!-- ************************************************************************	-->
			<form:Group title="If avaliable descriptive text via ValueListWarning">
				<form:GroupElement>
					<sf:SmartField
						id="idValueListWarning"
						value="{SupplierIDWarning}"
						textInEditModeSource="ValueListWarning"/>
				</form:GroupElement>
			</form:Group>

		</form:SmartForm>

	</m:ScrollContainer>

</mvc:View>
