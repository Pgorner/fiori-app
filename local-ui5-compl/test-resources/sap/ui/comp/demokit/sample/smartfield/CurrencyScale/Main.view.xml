<mvc:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sf="sap.ui.comp.smartfield"
	xmlns:form="sap.ui.comp.smartform"
	xmlns:m="sap.m" height="100%" controllerName="sap.ui.comp.sample.smartfield.CurrencyScale.Main">
	<m:ScrollContainer id="SC1" height="100%" horizontal="false" vertical="true">
		<form:SmartForm id="SF1" class="editableForm" editTogglable="true" editable="true" title="{Name}" binding="{/Products('1239102')}">
			<form:layout>
				<form:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
			</form:layout>
			<form:Group id="G1" title="SmartField with Currency scale">
				<!-- ****************************************************** -->
				<!-- sap:semantics="currency"								-->
				<!-- ****************************************************** -->
				<form:GroupElement id="GE-Price">

					<sf:SmartField id="idPrice" value="{Price}"/>

				</form:GroupElement>
			</form:Group>
			<form:Group id="G2" title="SmartField with Unit of Measure with Custom CodeList">
				<!-- ****************************************************** -->
				<!-- sap:semantics="unit-of-measure"						-->
				<!-- ****************************************************** -->
				<form:GroupElement id="GE-Quantity">

					<sf:SmartField id="idQuantity" value="{Quantity}"/>

				</form:GroupElement>
			</form:Group>
		</form:SmartForm>
	</m:ScrollContainer>
</mvc:View>
