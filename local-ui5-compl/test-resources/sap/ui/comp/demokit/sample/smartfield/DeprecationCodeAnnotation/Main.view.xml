<mvc:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sf="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:form="sap.ui.comp.smartform"
	xmlns:m="sap.m" height="100%" controllerName="sap.ui.comp.sample.smartfield.DeprecationCodeAnnotation.Main">
	<m:ScrollContainer id="SC1" height="100%" horizontal="false" vertical="true">
		<m:Panel headerText="SmartField with ValueHelp and DeprecationCode annotation">
			<m:content>
				<m:Text class="sapUiResponsiveMargin" text="This sample shows usage of SmartField with 'com.sap.vocabularies.CodeList.v1.IsConfigurationDeprecationCode' which defines the status of all fields of the Value Help Dialog control as valid, deprecated or revoked. Each status has a corresponding letter. For deprecated it's ‘W’, for revoked – ‘E’ and for valid we use an empty string." />

				<form:SmartForm id="SF1" class="editableForm" editTogglable="true" editable="true" title="{Name}" binding="{/Products('1239102')}">
					<form:layout>
						<form:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
					</form:layout>
					<form:Group id="G1">

						<!-- ****************************************************** -->
						<!-- sap:semantics="currency-code" 							-->
						<!-- ****************************************************** -->
						<form:GroupElement id="GE-Price">

							<sf:SmartField id="idPrice" value="{Price}"/>

						</form:GroupElement>
					</form:Group>
				</form:SmartForm>
			</m:content>
		</m:Panel>
	</m:ScrollContainer>
</mvc:View>
