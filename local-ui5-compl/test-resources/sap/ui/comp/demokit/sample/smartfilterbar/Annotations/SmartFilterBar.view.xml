<mvc:View
	xmlns="sap.f"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sfb="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	height="100%"
	controllerName="sap.ui.comp.sample.smartfilterbar.Annotations.SmartFilterBar">
	<DynamicPage id="dynamicPage" fitContent="true">
		<header>
			<DynamicPageHeader>
				<sfb:SmartFilterBar
					id="smartFilterBar"
					entitySet="MainEntitySet"
					search="onSearch">
					<sfb:customData>
						<core:CustomData
							key="defaultFilterBarExpanded"
							value='{"VH_many_filters": "true"}'/>
						<core:CustomData
							key="defaultShowAllFilters"
							value='{"VH_many_filters": "true"}'/>
					</sfb:customData>
					<sfb:controlConfiguration>
						<sfb:ControlConfiguration
							key="Name"
							visibleInAdvancedArea="true" />
						<sfb:ControlConfiguration
							key="Currency"
							visibleInAdvancedArea="true" />
					</sfb:controlConfiguration>
				</sfb:SmartFilterBar>
			</DynamicPageHeader>
		</header>
		<content>
			<m:VBox>
				<smartTable:SmartTable
					id="smartTable"
					entitySet="MainEntitySet"
					smartFilterId="smartFilterBar"
					tableType="Table"
					header="Products"
					showRowCount="true"
					enableAutoColumnWidth="true">
					<smartTable:customData>
						<core:CustomData key="defaultFilterBarExpanded" value='true'/>
						<core:CustomData key="defaultShowAllFilters" value='true'/>
					</smartTable:customData>
					<smartTable:layoutData>
						<m:FlexItemData growFactor="1" baseSize="0%"/>
					</smartTable:layoutData>
				</smartTable:SmartTable>
				<m:Panel
					expanded="true"
					class="sapUiMediumMarginTopBottom">
					<m:Title text="Filter Query:" />
					<m:Text id="filterResult" width="100%" />
				</m:Panel>
			</m:VBox>
		</content>
	</DynamicPage>
</mvc:View>
