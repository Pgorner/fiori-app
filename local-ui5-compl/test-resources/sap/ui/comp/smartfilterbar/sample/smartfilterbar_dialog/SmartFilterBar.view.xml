<mvc:View controllerName="sap.ui.comp.sample.smartfilterbar_dialog.SmartFilterBar"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.f"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:sv="sap.ui.comp.smartvariants"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:smartChart="sap.ui.comp.smartchart"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	height="100%">

	<App>
		<Page id="page" class="sapUiSizeCompact">
			<headerContent>
				<Button id="rtaAdaption" visible="{app>/showAdaptButton}"
					text="{= ${app>/showAdaptButton} ? ${i18n>btnAdapt} : ${i18n>btnNonAdapt} }"
					press=".switchToAdaptionMode" />
			</headerContent>
			<content>

				<HBox>
					<Button id="toggleUpdateMode" text="Change to 'LiveMode'"
						press="toggleUpdateMode" />
					<Button id="toggleFIVisibility" text="Toggle FI(My Hugo) visibility"
						press="toggleFIVisibility" />
					<Button id="toggleShowGo" text="Toggle Go button" press="toggleShowGoOnFB" />
					<Button id="toggleToolbar" text="Toggle useToolbar" press="toggleUseToolbar" />
					<Button id="toggleAPILevel" text="Current: Single Value Filters"
						press="toggleAPILevel" visible="false" />
					<Button id="toggleStrictMode" text="Mode: strict" press="toggleStrictMode" />
					<Button id="toggleErrorMode" text="Toggle error" press="toggleErrorMode" />
					<Button id="triggerGetFilters" text="Trigger getFilters"/>
				</HBox>

				<f:DynamicPage id="dynamicPage">
					<f:title>
						<f:DynamicPageTitle>
							<f:heading>
								<sv:SmartVariantManagement id="__SVM01"
									persistencyKey="smartfilterbar_dialog"
									showShare="true"
									entitySet="ZEPM_C_SALESORDERITEMQUERYResults"
									showExecuteOnSelection="true"
									displayTextForExecuteOnSelectionForStandardVariant="{i18n>AA_STANDARD}" />
							</f:heading>
							<f:snappedContent>
								<Text id="statusText" />
							</f:snappedContent>

						</f:DynamicPageTitle>
					</f:title>
					<f:header>
						<f:DynamicPageHeader>
							<f:content>

								<smartFilterBar:SmartFilterBar id="smartFilterBar"
									advancedMode="false" smartVariant="__SVM01" persistencyKey="smartfilterbar_dialog_sfb"
									clear="onClear" reset="onRestore" cancel="onCancel" search="onSearch"
									filtersDialogBeforeOpen="onDialogOpened" filtersDialogClosed="onDialogClosed"
									filtersDialogCancel="onDialogCancel"
									liveMode="false"
									considerAnalyticalParameters="true"
									useProvidedNavigationProperties="true"
									navigationProperties="to_BusinessArea, to_CompanyCode/CompanyCode, to_CompanyCode/CityName" assignedFiltersChanged="onAssignedFiltersChanged"
									entitySet="ZEPM_C_SALESORDERITEMQUERYResults" useToolbar="false"
									app:executeStandardVariantOnSelect="true"
									beforeVariantFetch="onBeforeVariantFetch"
									afterVariantLoad="onAfterVariantLoad"
									enableBasicSearch="true">

									<smartFilterBar:customData>
										<core:CustomData key="dateFormatSettings"
											value='\{"UTC":true,"style":"short"\}' />
									</smartFilterBar:customData>


									<!-- layout data used to make the table growing but the filter bar
										fixed -->
									<smartFilterBar:layoutData>
										<FlexItemData shrinkFactor="0" />
									</smartFilterBar:layoutData>

									<smartFilterBar:controlConfiguration>
										<smartFilterBar:ControlConfiguration
											key="Bukrs" groupId="_BASIC" index="0" />

										<smartFilterBar:ControlConfiguration
											key="CustomFilterField" index="1" label="Custom Filterfield"
											groupId="_BASIC" width="300px" visibleInAdvancedArea="true">
											<smartFilterBar:customControl>
												<MultiComboBox id="multiComboBox"
													selectionChange="onCustomerControlChanged">
													<core:Item key="1" text="ONE" />
													<core:Item key="2" text="TWO" />
													<core:Item key="3" text="THREE" />
												</MultiComboBox>
											</smartFilterBar:customControl>
										</smartFilterBar:ControlConfiguration>


										<smartFilterBar:ControlConfiguration
											key="BUDAT" groupId="_BASIC" visibleInAdvancedArea="true" />


										<smartFilterBar:ControlConfiguration
											key="BUDAT_ST" visibleInAdvancedArea="true"
											label="DateRangeType">
										</smartFilterBar:ControlConfiguration>


										<smartFilterBar:ControlConfiguration
											key="IsReversalDocument" groupId="_BASIC"
											visibleInAdvancedArea="true" filterType="single" />
										<smartFilterBar:ControlConfiguration
											key="XCPDS" groupId="_BASIC" visibleInAdvancedArea="true" />
										<smartFilterBar:ControlConfiguration
											key="AvailableSince" groupId="_BASIC" visibleInAdvancedArea="true" />
										<smartFilterBar:ControlConfiguration
											key="AvailableSinceSingle" groupId="_BASIC"
											visibleInAdvancedArea="true" filterType="single" />
										<smartFilterBar:ControlConfiguration
											key="AvailableSinceInterval" groupId="_BASIC"
											visibleInAdvancedArea="true" filterType="interval" />
										<smartFilterBar:ControlConfiguration
											key="LocalBoolean" groupId="_BASIC" visibleInAdvancedArea="true"
											filterType="single" />
										<smartFilterBar:ControlConfiguration
											key="Quantity" groupId="_BASIC" index="5"
											visibleInAdvancedArea="true" filterType="interval" />

										<smartFilterBar:ControlConfiguration
											key="DueTime" groupId="_BASIC" visibleInAdvancedArea="true"
											filterType="single" />

										<smartFilterBar:ControlConfiguration
											key="DateTimeOffset" groupId="_BASIC" visibleInAdvancedArea="true"
											filterType="multiple" />

										<smartFilterBar:ControlConfiguration
											key="NUMC" groupId="_BASIC" visibleInAdvancedArea="true"
											filterType="auto" hasValueHelpDialog="true" />


										<smartFilterBar:ControlConfiguration
											key="to_CompanyCode.Id" groupId="_BASIC"
											visibleInAdvancedArea="true" filterType="single"
											hasValueHelpDialog="true" />

									</smartFilterBar:controlConfiguration>

								</smartFilterBar:SmartFilterBar>

							</f:content>
						</f:DynamicPageHeader>
					</f:header>
					<f:content>

						<VBox>
							<smartTable:SmartTable id="LineItemsSmartTable"
								entitySet="ZEPM_C_SALESORDERITEMQUERYResults" smartFilterId="smartFilterBar"
								tableType="Table" enableExport="true"
								useVariantManagement="true"
								useTablePersonalisation="true" header="Line Items" showRowCount="true"
								persistencyKey="smartfilterbar_dialog_stable" enableAutoBinding="true"
								class="sapUiResponsiveContentPadding" enableAutoColumnWidth="true"
								editTogglable="true" app:useSmartToggle="true">
								<!-- layout data used to make the table growing but the filter bar
									fixed -->
								<smartTable:layoutData>
									<FlexItemData growFactor="1" baseSize="0%" />
								</smartTable:layoutData>
							</smartTable:SmartTable>

							<smartChart:SmartChart id="smartChart01"
								enableAutoBinding="false"
								entitySet="ZEPM_C_SALESORDERITEMQUERYResults"
								useVariantManagement="true" persistencyKey="smartfilterbar_dialog_schart"
								useChartPersonalisation="true" header="Any long title for check"
								showFullScreenButton="true" selectionMode="Multi" useTooltip="true"
								showChartTooltip="true" showDrillBreadcrumbs="true"
								showDetailsButton="true" showDrillButtons="false"
								showSemanticNavigationButton="false"
								showChartTypeSelectionButton="true">
								<!--Item Level -->
								<smartChart:selectionDetailsItemActions>
									<core:Item key="ItemAction1" text="ItemAction 1"></core:Item>
									<core:Item key="ItemAction2" text="ItemAction 2"></core:Item>
								</smartChart:selectionDetailsItemActions>
								<smartChart:layoutData>
									<FlexItemData growFactor="1" />
								</smartChart:layoutData>
							</smartChart:SmartChart>
						</VBox>


					</f:content>

				</f:DynamicPage>

			</content>
		</Page>
	</App>
</mvc:View>
