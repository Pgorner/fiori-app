<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:p13n="sap.m.p13n">
    <p13n:P13nDialog showReset="true" showResetEnabled="{path: '/ShowResetEnabled'}" ok="onOK" cancel="onCancel" reset="onReset" class="sapUiSizeCompact">
        <p13n:panels>
            <p13n:P13nColumnsPanel changeColumnsItems="onChangeColumnsItems"
                              items="{path: '/ColumnCollection'}"
                              columnsItems="{path: '/ColumnsItems'}">
                <p13n:items>
                    <p13n:P13nItem columnKey="{columnKey}" text="{text}"/>
                </p13n:items>
                <p13n:columnsItems>
                    <P13nColumnsItem columnKey="{columnKey}" index="{index}" visible="{visible}"/>
                </p13n:columnsItems>
            </p13n:P13nColumnsPanel>
            <p13n:P13nSortPanel containerQuery="true" addSortItem="onAddSortItem" removeSortItem="onRemoveSortItem"
                           items="{path: '/ColumnCollection'}"
                           sortItems="{path: '/SortItems'}">
                <p13n:P13nItem columnKey="{columnKey}" text="{text}"/>
                <p13n:sortItems>
                    <Pp13n:13nSortItem columnKey="{columnKey}" operation="{operation}"/>
                </p13n:sortItems>
            </p13n:P13nSortPanel>
        </p13n:panels>
    </p13n:P13nDialog>
</core:FragmentDefinition>