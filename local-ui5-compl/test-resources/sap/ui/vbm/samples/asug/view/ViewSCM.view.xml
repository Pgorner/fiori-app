<mvc:View controllerName="asug.controller.ViewSCM" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:vbm="sap.ui.vbm" xmlns="sap.m">
	<App id="app">
		<pages>
			<Page title="Monitor On-Time Performance (North America)" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<!-- <List items="{/issues}"> -->
					<!-- <StandardListItem title="{key}"></StandardListItem></List> -->
					<vbm:MapContainer autoAdjustHeight="true" id="MapCont"  showSettings="false">
						<vbm:listPanelStack>
							<vbm:ListPanelStack width="300px" expanded="false">
								<vbm:content>
									<vbm:ListPanel headerText="Transportation" selectionMode="MultiSelect"
										headerIcon="sap-icon://travel-itinerary" items="{/modalfilter}" expanded="false" >
										<vbm:items>
											<vbm:ContainerLegendItem title="{name}" selected="{selected}" />
										</vbm:items>
									</vbm:ListPanel>
									<vbm:ListPanel headerText="Delay Times" selectionMode="None" expanded="false"
										headerIcon="sap-icon://legend" >
										<vbm:items>
											<vbm:ContainerLegendItem title="&lt; 90%" color="rgb(211,32,48)" selected="true" />
											<vbm:ContainerLegendItem title="between 90% and 97%" color="rgb(225,123,36)" selected="true" />
											<vbm:ContainerLegendItem title="&gt; 97%" color="rgb(97,166,86)" selected="true" />
										</vbm:items>
									</vbm:ListPanel>
									<vbm:ListPanel  headerText="Ranges for FY 2015" headerIcon="sap-icon://calendar" selectionMode="SingleSelectLeft"
										expanded="false" items="{/rangesSCM}" >
										<vbm:items>
											<vbm:ContainerLegendItem title="{name}" selected="{selected}"/>
										</vbm:items>
									</vbm:ListPanel>
								</vbm:content>
							</vbm:ListPanelStack>				
						</vbm:listPanelStack>
						<vbm:content>
							<vbm:ContainerContent icon="sap-icon://geographic-bubble-chart"
								title="Analytic Map">
								<vbm:content>
									<vbm:AnalyticMap id="ANAMAP"  initialZoom="5" initialPosition="-97.1630859375;36.544964986603844"	>
										<vbm:resources>
											<vbm:Resource name="PinGreen.png"
												src="images/Green_Pin_with_Circle1.png">
											</vbm:Resource>
											<vbm:Resource name="PinOrange.png"
												src="images/Orange_Pin_with_Circle1.png">
											</vbm:Resource>
											<vbm:Resource name="PinRed.png"
												src="images/Red_Pin_with_Circle1.png">
											</vbm:Resource>
											<vbm:Resource name="PinBlue.png"
												src="images/Blue_Pin_with_Circle1.png">
											</vbm:Resource>
											<vbm:Resource name="PinGrey.png"
												src="images/Grey_Pin_with_Circle1.png">
											</vbm:Resource>
										</vbm:resources>
									</vbm:AnalyticMap>
								</vbm:content>
							</vbm:ContainerContent>
							<vbm:ContainerContent icon="sap-icon://map-2"
								title="Geo Map">
								<vbm:content>
									<vbm:GeoMap id="GEOMAP" initialZoom="5" initialPosition="-97.1630859375;36.544964986603844"	>
									<vbm:resources>
										<vbm:Resource name="PinGreen.png"
											src="images/Green_Pin_with_Circle1.png">
										</vbm:Resource>
										<vbm:Resource name="PinOrange.png"
											src="images/Orange_Pin_with_Circle1.png">
										</vbm:Resource>
										<vbm:Resource name="PinRed.png"
											src="images/Red_Pin_with_Circle1.png">
										</vbm:Resource>
										<vbm:Resource name="PinBlue.png"
											src="images/Blue_Pin_with_Circle1.png">
										</vbm:Resource>
										<vbm:Resource name="PinGrey.png"
											src="images/Grey_Pin_with_Circle1.png">
										</vbm:Resource>
									</vbm:resources>
									</vbm:GeoMap>
								</vbm:content>
							</vbm:ContainerContent>
						</vbm:content>
					</vbm:MapContainer>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>