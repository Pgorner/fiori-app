<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:code="sap.ui.codeeditor"
    controllerName="sap.ushell.playground.controller.ContentFinder"
    core:require="{
        ushellLibrary: 'sap/ushell/library'
    }">
    <Page
        title="ContentFinder Dialog"
        class="sapUiStdPage sapUiContentPadding"
    >
        <subHeader>
            <OverflowToolbar>
                <Button
                    text="Add Tiles"
                    press=".openTilesAppSearch" />
                <Button
                    text="Add Tiles (with ContextData)"
                    press=".openTilesAppSearchWithContextData" />
                <Button
                    text="Add Tiles (with Category Tree)"
                    press=".openTilesAppSearchWithCategoryTree" />
            </OverflowToolbar>
        </subHeader>
        <Panel
            expandable="true"
            expanded="true"
            headerText="Content Finder Component Settings"
            class="sapUiTinyMarginBottom"
        >
            <form:SimpleForm
                id="contentFinderComponentSettingsForm"
                layout="ResponsiveGridLayout"
                editable="true"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label text="enablePersonalization" />
                <CheckBox selected="{component>/settings/enablePersonalization}" />

                <Label text="noItemsInCatalogDescription" />
                <Input value="{component>/settings/noItemsInCatalogDescription}" />

                <Label text="showCategoryTreeWhenEmpty" />
                <CheckBox selected="{component>/settings/showCategoryTreeWhenEmpty}" />

                <Label text="showApplicationLaunchButton" />
                <CheckBox selected="{component>/settings/showApplicationLaunchButton}" />

            </form:SimpleForm>
        </Panel>
        <Panel
            expandable="true"
            expanded="true"
            headerText="ContentFinder Events"
            class="sapUiTinyMarginBottom"
        >
            <form:SimpleForm
                id="eventForm"
                class="sapUiSmallMarginBottom"
                layout="ResponsiveGridLayout"
                editable="true"
            >
                <Label text="Event ID" />
                <Text
                    id="eventId"
                    text="-" />

                <Label text="Event Data" />
                <code:CodeEditor
                    id="eventData"
                    editable="false"
                    type="json"
                    value=""
                    height="300px" />
                <Label text="" />
                <Button
                    text="Clear"
                    press=".onPressClear"
                    width="10rem" />
            </form:SimpleForm>
        </Panel>
        <Panel
            expandable="true"
            expanded="false"
            headerText="ContentFinder API"
            class="sapUiTinyMarginBottom"
        >
            <form:SimpleForm
                id="dataForm"
                layout="ResponsiveGridLayout"
                editable="true"
            >
                <Label text="setCategoryTree" />
                <code:CodeEditor
                    id="setCategoryTreeData"
                    editable="true"
                    type="json"
                    value="{ path: '/categoryTree', type: 'sap.ushell.playground.contentFinder.JSONType'}"
                    height="300px" />

                <!-- spacer -->
                <Label text="" />
                <Text text="" />

                <Label text="setVisualizations" />
                <code:CodeEditor
                    id="setVisualizationsData"
                    editable="true"
                    type="json"
                    value="{ path: '/vizData', type: 'sap.ushell.playground.contentFinder.JSONType'}"
                    height="500px" />

                <!-- spacer -->
                <Label text="" />
                <Text text="" />

                <Label text="setContextData" />
                <code:CodeEditor
                    id="setContextData"
                    editable="true"
                    type="json"
                    value="{ path: '/contextData', type: 'sap.ushell.playground.contentFinder.JSONType'}"
                    height="200px" />
            </form:SimpleForm>
        </Panel>
    </Page>
</mvc:View>
