<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:int="sap.ui.integration"
    xmlns:widgets="sap.ui.integration.widgets"
    xmlns:wp="sap.ushell.components.workPageBuilder.controls"
    xmlns:f="sap.f"
    xmlns:code="sap.ui.codeeditor"
    controllerName="sap.ushell.playground.controller.CardsDesignTime"
    height="100%">
    <Page
        id="cardsDesignTime"
        enableScrolling="false"
        title="Cards Configuration"
        class="sapUiResponsiveContentPadding">


        <VBox width="100%">
            <layoutData>
                <FlexItemData growFactor="1" shrinkFactor="1"/>
            </layoutData>
            <HBox>
                <VBox class="sapUiContentPadding">
                    <layoutData>
                        <FlexItemData growFactor="0" shrinkFactor="1"/>
                    </layoutData>
                    <widgets:Card id="designTimeCard1" width="500px"
                                  manifest="https://ui5.sap.com/test-resources/sap/ui/integration/demokit/cardExplorer/webapp/samples/designtimePreviewInteractive/manifest.json">
                        <widgets:actionDefinitions>
                            <int:ActionDefinition type="Custom" text="Configure" buttonType="Transparent" enabled="true" icon="sap-icon://wrench" press=".configureCard('designTimeCard1', 'configCard1', $event)" />
                        </widgets:actionDefinitions>
                    </widgets:Card>
                </VBox>
                <VBox>
                    <layoutData>
                        <FlexItemData growFactor="1" shrinkFactor="1"/>
                    </layoutData>
                    <Title text="Widget Configuration" />

                    <code:CodeEditor
                        id="configCard1"
                        editable="false"
                        type="json"
                        value=''
                        height="300px" />
                </VBox>
            </HBox>

            <HBox>
                <VBox class="sapUiContentPadding">
                    <layoutData>
                        <FlexItemData growFactor="0" shrinkFactor="1"/>
                    </layoutData>
                    <widgets:Card id="designTimeCard2" width="500px"
                                  manifest="https://ui5.sap.com/test-resources/sap/ui/integration/demokit/cardExplorer/webapp/samples/list/highlight.json">
                        <widgets:actionDefinitions>
                            <int:ActionDefinition type="Custom" text="Configure" buttonType="Transparent" enabled="true" icon="sap-icon://wrench" press=".configureCard('designTimeCard2', 'configCard2', $event)" />
                        </widgets:actionDefinitions>
                    </widgets:Card>
                </VBox>
                <VBox>
                    <layoutData>
                        <FlexItemData growFactor="1" shrinkFactor="1"/>
                    </layoutData>
                    <Title text="Widget Configuration" />
                    <code:CodeEditor
                        id="configCard2"
                        editable="false"
                        type="json"
                        value=''
                        height="300px" />
                </VBox>
            </HBox>
        </VBox>
    </Page>
</mvc:View>
