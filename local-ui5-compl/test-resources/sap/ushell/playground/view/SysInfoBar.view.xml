<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:shell="sap.ushell.ui.shell"
    xmlns:unified="sap.ui.unified"
    controllerName="sap.ushell.playground.controller.SysInfoBar"
    height="100%">
    <Page
        id="sysInfoBarPage"
        enableScrolling="true"
        title="System Info Bar"
        class="sapUiResponsiveContentPadding">

        <Panel>
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="System Info Bar"/>
                </OverflowToolbar>
            </headerToolbar>
            <content>
                <shell:SysInfoBar id="sysInfoBar">

                </shell:SysInfoBar>
            </content>
        </Panel>

        <Panel>
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="System Info Bar Settings"/>
                </OverflowToolbar>
            </headerToolbar>
            <content>
                <VBox>
                    <Label text="Select Color"/>
                    <Select id="selectColor">
                        <core:Item key="orange" text="Orange" />
                        <core:Item key="red" text="Red" />
                        <core:Item key="pink" text="Pink" />
                        <core:Item key="pink2" text="Pink2" />
                        <core:Item key="violet" text="Violet" />
                        <core:Item key="violet2" text="Violet2" />
                        <core:Item key="blue" text="Blue" />
                        <core:Item key="blue2" text="Blue2" />
                        <core:Item key="green" text="Green" />
                        <core:Item key="green2" text="Green2" />
                        <core:Item key="grey" text="Grey" />
                        <core:Item key="grey2" text="Grey2" />
                        <core:Item key="gray" text="Gray" />
                        <core:Item key="gray2" text="Gray2" />
                        <core:Item key="custom" text="Custom" />
                    </Select>
                    <Label text="Individual Color"/>
                    <unified:ColorPicker id="colorPicker" mode="HSL" displayMode="Simplified"/>
                    <Label text="Enter Main Text"/>
                    <Input id="inputText" value="Sales Demo"/>
                    <Label text="Enter Secondary Text"/>
                    <Input id="inputSubText" value="EAY/100"/>
                    <Label text="Enter Icon URI"/>
                    <Input id="inputSubIcon" value="sap-icon://begin"/>
                </VBox>
                <Button text="Apply Settings" press="onApply"></Button>
            </content>
        </Panel>
    </Page>
</mvc:View>
