{
    "sap.flp": {
        "columns": "4",
        "rows": "3"
    },
    "sap.app": {
        "type": "card"
    },
    "sap.card": {
        "extension": "./Extension",
        "type": "List",
        "data": {
            "extension": {
                "method": "getData"
            }
        },
        "header": {
            "title": "Recent Activities",
            "status": {
                "text": "Top 3"
            },
            "actions": [
                {
                    "type": "Navigation",
                    "parameters": {
                        "openUI": "RecentActivities"
                    }
                }
            ]
        },
        "content": {
            "maxItems": 3,
            "item": {
                "title": {
                    "label": "{{title_label}}",
                    "value": "{Name}"
                },
                "description": {
                    "label": "{{description_label}}",
                    "value": "{Description}"
                },
                "icon": {
                    "src": "sap-icon://product",
                    "label": "icon"
                },
                "highlight": "{Highlight}",
                "actions": [
                    {
                        "type": "Navigation",
                        "enabled": "{Enabled}",
                        "parameters": {
                            "title": "{Name}",
                            "url": "{Url}"
                        }
                    }
                ]
            }
        }
    }
}
