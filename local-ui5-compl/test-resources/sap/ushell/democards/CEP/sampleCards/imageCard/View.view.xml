<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    width="100%"
    displayBlock="true"
    controllerName="sap.ushell.samplecards.imageCard.Main"
    core:require="{
      formatMessage: 'sap/base/strings/formatMessage'
    }">
    <html:style>
      .sapUIfloatingtext {
            position: absolute;
            bottom: 25px;
            padding-left: 35px;
            padding-right: 35px;
            font-size: 50px;  
            font-weight: bold;      
      }
      .sapUIfloatingdate {
            position: absolute;
            bottom: 85px;
            padding-left: 35px;
            padding-right: 35px;
            font-size: 20px;  
      }
   </html:style>

    <Image id="img" width="100%" />
    <Text text="{/date}" class="sapThemeTextInverted sapUIfloatingdate"/>
    <Text text="{
      parts: ['i18n>welcomeMessage', '/firstName'],
      formatter: 'formatMessage'
      }" class="sapThemeTextInverted sapUIfloatingtext"/>
</mvc:View>
