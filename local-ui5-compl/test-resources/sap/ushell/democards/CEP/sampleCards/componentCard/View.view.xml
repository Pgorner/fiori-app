<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:ui="sap.ui.integration.widgets"
    xmlns="sap.m"
    width="100%"
    displayBlock="true"
    controllerName="sap.ushell.samplecards.componentCard.Main">

    <FlexBox id="myCustomComponentFlexBox">
        <ui:Card action=".onCardNavigation" id="listCard1">
            <ui:layoutData>
                <FlexItemData minWidth="0" />
            </ui:layoutData>
        </ui:Card>

        <ui:Card action=".onCardNavigation" id="listCard2">
            <ui:layoutData>
                <FlexItemData minWidth="0" styleClass="sapUiSmallMarginBegin"  />
            </ui:layoutData>
        </ui:Card>

        <ui:Card action=".onCardNavigation" id="listCard3">
            <ui:layoutData>
                <FlexItemData minWidth="0" styleClass="sapUiSmallMarginBegin" />
            </ui:layoutData>
        </ui:Card>
    </FlexBox>
</mvc:View>
