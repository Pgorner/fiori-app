<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ushell.demo.BootstrapPluginSample.PluginCEPSearchExtProvider.floatingWindow.floating"
    width="100%"
    height="100%"
    class="copilotContainer">
    <Toolbar
        id="toolbarHeaderArea"
        class="copilotHeaderNoPadding copilotHeaderNoBorder copilotHeaderRoundCorners copilotDragableHandle copilotAssistantHeaderBackground copilotHeader"
        design="Solid"
        width="100%">
        <HBox class="copilotHeaderEndContainer" width="100%" justifyContent="End">
            <Button id="copilotCloseBtn" class="sapUshellCopilotCloseBtn" icon="sap-icon://decline" press="onClose" type="Transparent" />
        </HBox>
    </Toolbar>
    <Page showHeader="false">
        <content>
            <VBox class="CEP-plugin-body">
                <HBox class="CEP-plugin-display-wrapper">
                    <Text text="{displayModel>/message}" class="CEP-plugin-display-content"/>
                </HBox>
                <HBox class="sapUiMediumMarginTop">
                    <VBox>
                        <Button id="register_travel" width="11rem" text="add travel assistant" press=".onButtonPress('register_travel')" class="sapUiSmallMargin"/>
                    </VBox>
                    <VBox>
                        <Button id="unregister_travel" width="11rem" text="remove travel assistant" press=".onButtonPress('unregister_travel')" class="sapUiSmallMargin"/>
                    </VBox>
                </HBox>
                <HBox>
                    <VBox>
                        <Button id="register_course" width="11rem" text="add course assistant" press=".onButtonPress('register_course')" class="sapUiSmallMargin"/>
                    </VBox>
                    <VBox>
                        <Button id="unregister_course" width="11rem" text="remove course assistant" press=".onButtonPress('unregister_course')" class="sapUiSmallMargin"/>
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
