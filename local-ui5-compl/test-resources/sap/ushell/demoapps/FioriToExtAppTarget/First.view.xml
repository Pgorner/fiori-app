<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ushell.demo.FioriToExtAppTarget.First">
    <Page title="Application To Receive Parameters - Main View">
        <content>
            <Panel headerText="The received parameters:">
                <Label text="Parameter #1 Received" />
                <TextArea rows="5" id="txtParam1" value="{/param1}" width="100%" enabled="true" />
                <Label text="Parameter #2 Received" />
                <TextArea rows="5" id="txtParam2" value="{/param2}" width="100%" enabled="true" />
                <Label text="Parameter #3 Received" />
                <Input id="txtParam3" enabled="true" value="{/param3}" class="txtParam3InTarget"/>
                <Button id="btnSubmit" class="idQunitSubmit" press="onSubmit" text="To SECOND view" enabled="true" />
            </Panel>
            <Panel>
                <HBox>
                    <Label text="History->getDirection() value:" />
                    <Input id="txtDirection" enabled="true" />
                </HBox>
            </Panel>
        </content>
    </Page>
</mvc:View>
