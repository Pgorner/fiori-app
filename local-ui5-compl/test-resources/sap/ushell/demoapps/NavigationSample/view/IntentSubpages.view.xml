<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
    controllerName="sap.ushell.demo.NavigationSample.controller.IntentSubpages">
    <Page title="{i18n>pages.intentSubpages}">
        <content>
            <form:SimpleForm id="form" maxContainerCols="2">
                <Label text="{i18n>intent.form.label.semanticObject}" />
                <Input id="f2" value="{v1>/SO}" type="Text" placeholder="{i18n>intent.form.label.semanticObject}" tooltip="{i18n>intent.form.label.semanticObject}"/>
                <Label text="{i18n>intent.form.label.action}" />
                <Input id="f3" value="{v1>/action}" type="Text"  placeholder="{i18n>intent.form.label.action}" tooltip="{i18n>intent.form.label.action}"/>
                <Label text="{i18n>intent.form.label.parameters}" />
                <Input id="f4" value="{v1>/params}" type="Text" placeholder="{i18n>intent.form.label.parameters}" tooltip="{i18n>intent.form.label.parameters}" />
                <Label text="{i18n>intent.form.label.addLongParams}" />
                <Switch id="fx" state="{v1>/addLongParams}" />
            </form:SimpleForm>

            <Panel headerText="{i18n>intent.panel.header}">
                <Label text="{i18n>intent.panel.addAppState}" labelFor="ason" />
                <Switch id="ason" state="{v1>/appStateOn}" />
                <Label text="{i18n>intent.panel.asText}" />
                <Switch state="{v1>/appStateAsText}" visible="{v1>/appStateOn}" />

                <form:SimpleForm id="formT" maxContainerCols="2" visible="{v2>/appStateAsTextOn}">
                    <Label text="{i18n>intent.panel.form.stateContent.label}" />
                    <TextArea
                        rows="4"
                        enabled="{v1>/appStateAsText}"
                        tooltip="{v2>/tooltip}"
                        id="txt2"
                        value="{v1>/appStateText}"
                        valueState="{v2>/textOK}" />
                </form:SimpleForm>

                <form:SimpleForm id="form3" maxContainerCols="2" visible="{v2>/appStateAsSelectionVariant}">
                    <Label text="{i18n>intent.panel.form.param1}" />
                    <Switch state="{v1>/P1}" />
                    <Label text="{i18n>intent.panel.form.param2}" />
                    <Switch state="{v1>/P2}" />
                    <Label text="{i18n>intent.panel.form.param1new}" />
                    <Switch state="{v1>/P1New}" />
                    <Label text="{i18n>intent.panel.form.freeSelect}" />
                    <Input type="Text" value="{v1>/PX}" />
                </form:SimpleForm>
                <TextArea rows="4" cols="80" visible="{v1>/appStateOn}" value="{v2>/data}" enabled="false" />
            </Panel>

            <Link href="{/toGeneratedLink}" text="{i18n>intent.link.generatedLink}" tooltip="{i18n>intent.link.generatedLink.tooltip}" target="_blank" />
            <Button id="btntoGeneratedLink" text="{i18n>intent.link.generatedLink.button}" press="handleBtnGenPress" class="testToView2Btn" />

            <form:SimpleForm id="appNavView1Form" maxContainerCols="2">
                <Label text="{i18n>intent.form.appState}" />
                <Input type="Text" enabled="false" id="fas2" value="{AppState>/appstate/stringifiedAppstate}" />
            </form:SimpleForm>
        </content>
    </Page>
</mvc:View>
