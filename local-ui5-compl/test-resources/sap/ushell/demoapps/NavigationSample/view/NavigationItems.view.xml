<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:footerbar="sap.ushell.ui.footerbar"
    controllerName="sap.ushell.demo.NavigationSample.controller.NavigationItems">
    <Page title="{i18n>title}">

        <Panel headerText="{i18n>linklist.headings.home}">
            <VBox>
                <Link text="{i18n>linklist.links.home}" press="goDetails" />
                <Link text="{i18n>linklist.links.homeWithParams}" press="handleHomeWithParams" />
                <Link text="{i18n>linklist.links.homeWithLongURL}" press="handleHomeWithLongUrl" />
                <Link text="{i18n>linklist.links.error}" press="goError" />
            </VBox>
        </Panel>

        <Panel headerText="{i18n>linklist.headings.sideContent}">
            <VBox>
                <Link text="{i18n>linklist.links.crossAppBack}" press="handleBtnBackPress" />
                <Link text="{i18n>linklist.links.crossAppHome}" press="handleBtnHomePress" />

                <Button id="testDirtyFlagOn" text="{i18n>linklist.links.dirtyFlag.on}" press="handleSetDirtyFlagOn" />
                <Button id="testDirtyFlagOff" text="{i18n>linklist.links.dirtyFlag.off}" press="handleSetDirtyFlagOff" />

                <Button id="testDirtyStateProvider" text="{i18n>linklist.links.dirtyProvider}"
                    press="handleRegisterDirtyStateProvider" />
                <Button id="testDiregisterDirtyStateProvider" text="{i18n>linklist.links.dirtyProviderDeregister}"
                    press="handleDeregisterDirtyStateProvider" />

                <footerbar:AddBookmarkButton id="idAddBookmarkButton" />
                <footerbar:SendAsEmailButton id="idSendAsEmailButton" />

                <Button id="navigateBackInHistory" text="{i18n>linklist.links.historyBack}"
                    press="handleHistoryBack" />
            </VBox>
        </Panel>

        <Panel headerText="{i18n>linklist.headings.hash}">
            <VBox>
                <Link href="#Shell-home" text="{i18n>linklist.links.toShellHome}" target="_blank" />
                <Button text="call sap.m.URLHelper.redirect" press="doRedirect" />
                <Link href="{hrefForAppHash>/sHash}" text="{hrefForAppHash>/sHash}" target="_blank" />
            </VBox>
        </Panel>

        <Panel headerText="{i18n>linklist.headings.subPages}">
            <VBox>
                <Link text="{i18n>linklist.headings.subpage.intentSubpages}" press="goIntentSubpages" />
                <Link text="{i18n>linklist.headings.subpage.getLinks}" press="goGetLinks" />
                <Link text="{i18n>linklist.headings.subpage.sapTag}" press="goSapTag" />
                <Link text="{i18n>linklist.headings.subpage.wiki}" press="goWiki" />
            </VBox>
        </Panel>

    </Page>
</mvc:View>
