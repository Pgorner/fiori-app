<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ushell.demo.NavigationSample.controller.Detail">
    <Page title="{i18n>pages.details}">
        <content>
            <mvc:XMLView viewName="sap.ushell.demo.NavigationSample.view.InitialLoadHeader" />

            <Panel>
                <List
                    headerText="{i18n>details.startupParams}"
                    noDataText="{i18n>details.startupParamsNoData}"
                    items="{startupParameters>/parameters}">
                    <DisplayListItem label="{startupParameters>key}" value="{startupParameters>value}" />
                </List>
                <List headerText="{i18n>details.appKey}">
                    <DisplayListItem label="Key:" value="{AppState>/appstate/appStateKey}" />
                </List>
                <List headerText="{i18n>details.stateParams}" noDataText="{i18n>details.stateParamsNoData}" items="{AppState>/appstate/parameters}">
                    <InputListItem label="{AppState>name}" tooltip="{AppState>name}">
                        <Input id="UserDefaultValue" value="{AppState>value}" type="Text" enabled="false" />
                    </InputListItem>
                </List>

                <Label text="{i18n>details.recievedJSON}" />
                <TextArea cols="90" rows="3" enabled="false" id="fas2" value="{AppState>/appstate/stringifiedAppstate}" />

                <List
                    id="appStartupInfos"
                    headerText="{i18n>details.appStartupInfos}">
                    <DisplayListItem id="appStartupDate" label="{i18n>details.appStartupInfos.startupDate}" value="{path: 'detailView>/appStartDate', type: 'sap.ui.model.type.Date'}" />
                    <DisplayListItem id="appStartupTime" label="{i18n>details.appStartupInfos.startupTime}" value="{path: 'detailView>/appStartDate', type: 'sap.ui.model.type.Time', formatOptions: { pattern: 'HH:mm:ss.SSS'}}" />
                </List>

                <List headerText="{i18n>details.configProps}">
                    <CustomListItem>
                        <content>
                            <HBox>
                                <VBox>
                                    <Title
                                        class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        level="H1"
                                        text="{i18n>details.configProps.sizeBehavior}" />
                                    <Title class="sapUiSmallMarginBegin " level="H1" text="{detailView>/sizeBehavior}" />
                                </VBox>
                                <Button
                                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom idQunitToggleSizeBehavior"
                                    text="{i18n>details.configProps.toggle}"
                                    press="toggleSizeBehavior" />
                            </HBox>
                        </content>
                    </CustomListItem>
                </List>
            </Panel>
        </content>
    </Page>
</mvc:View>
