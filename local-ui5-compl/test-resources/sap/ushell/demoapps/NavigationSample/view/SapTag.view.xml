<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    controllerName="sap.ushell.demo.NavigationSample.controller.SapTag">
    <Page title="{i18n>pages.sapTag}" >
                <MessageStrip
            text="In this view you can test configured tags per semantic object via the parameter sap-tag added to intents/target mappings. Two cases are covered "
            showIcon="false"
            customIcon="sap-icon://tag"
            showCloseButton="false"
            class="sapUiMediumMarginBottom" />
        <Panel id="link_tag_testing" headerText="{i18n>tag.panel.link.header}">
            <layout:VerticalLayout>
                <MessageStrip
                    text="{i18n>tag.panel.link.messageStrip}"
                    showIcon="true"
                    customIcon="sap-icon://tag"
                    showCloseButton="false"
                    class="sapUiMediumMarginBottom" />
                <Label text="{i18n>tag.panel.link.label}" />
                <Input
                    id="semanticObject"
                    type="Text"
                    width="400px"
                    class="sapUiMediumMarginBottom"
                    placeholder="{i18n>tag.panel.link.placeholder}"
                    showSuggestion="true"
                    suggestionItems="{SOmodel>/suggestions}"
                    suggestionItemSelected="onSemanticObjectSelected">
                    <suggestionItems>
                        <core:Item text="{SOmodel>name}" />
                    </suggestionItems>
                </Input>
                <Label text="{i18n>tag.panel.link.label2}" />
                <Text text="{tagModel>/primaryIntent/text}" />
            </layout:VerticalLayout>
            <!-- text area to display the primary link-->
        </Panel>
        <Panel id="arbitrary_tag_testing" headerText="{i18n>tag.panel.testing.header}">
            <layout:VerticalLayout>
                <MessageStrip
                    text="{i18n>tag.panel.testing.messageStrip}"
                    showIcon="true"
                    customIcon="sap-icon://tag"
                    showCloseButton="false"
                    class="sapUiMediumMarginBottom" />
                <Label text="{i18n>tag.panel.testing.label1}" />
                <Input
                    value="Tagtesting"
                    id="semanticObject1"
                    type="Text"
                    width="400px"
                    placeholder="{i18n>tag.panel.testing.placeholder1}"
                    showSuggestion="true"
                    suggestionItems="{SOmodel>/suggestions}"
                    suggestionItemSelected="onSemanticObjectSelectedForTags">
                    <suggestionItems>
                        <core:Item text="{SOmodel>name}" />
                    </suggestionItems>
                </Input>
                <Label text="{i18n>tag.panel.testing.label2}" />
                <MultiInput
                    placeholder="{i18n>tags.panel.testing.placeholder2}"
                    width="400px" showValueHelp="false"
                    tokenUpdate="onTokenUpdated"
                    id="tagTokenizer"
                    class="sapUiMediumMarginBottom" />
                <Text text="{i18n>tag.panel.testing.taggedLinks}" />
                <List items="{tagModel>/taggedIntents}">
                    <StandardListItem title="{tagModel>text}" />
                </List>
            </layout:VerticalLayout>
        </Panel>
    </Page>
</mvc:View>
