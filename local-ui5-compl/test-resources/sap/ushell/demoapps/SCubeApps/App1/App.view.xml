<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    controllerName="sap.ushell.demo.SCubeApps.App1.App">
    <App>
        <Page title="SCube Extention App 1">
            <content>
                <Panel>
                    <layout:VerticalLayout>
                        <layout:HorizontalLayout>
                            <Label text="Option #1: Target intent:" />
                            <Input id="txtSemantic" value="App2" class="idTxtSemanticClass"/>
                            <Input id="txtAction" value="edit" class="idTxtActionClass"/>
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout>
                            <Button
                                id="btnNavToIntent1"
                                text="Navigate Option #1"
                                press="onCrossNavigate1"
                                class="idBtnNavToIntent1"/>
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout>
                            <Label text="Option #2: Target intent Full String:" />
                            <Input id="txtFullHash" value="App2-edit?param1=1234&#38;/view1/page1" class="idFullHashClass" width="600px"/>
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout>
                            <Button
                                id="btnNavToIntentFullHash1"
                                text="Navigate Option #2"
                                press="onCrossNavigate2"
                                class="idNavToIntentFullHash1"/>
                        </layout:HorizontalLayout>
                    </layout:VerticalLayout>
                </Panel>
            </content>
        </Page>
    </App>
</mvc:View>
