<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    height="100%"
    controllerName="sap.ushell.demo.textverticalization.controller.App" >
    <Page showHeader="false">
        <content>
            <VBox
                width="100%"
                class="sapUiSmallMargin">
                <Label
                    id="label"
                    labelFor="activeTerminologies"
                    showColon="true"
                    text="{i18n>activeTerminologies.label}" />
                <TextArea
                    id="activeTerminologies"
                    value="{/activeTerminologies}"
                    editable="false"
                    growing="true"
                    growingMaxLines="7"
                    width="60%"
                />
                <HBox>
                    <Button
                        press=".showMessageToast"
                        text="{i18n>messageToast.label}"
                    />
                </HBox>
            </VBox>
            <VBox
                width="100%"
                class="sapUiSmallMargin">
                <Text text="{i18n>verticalization.base}" />
                <Text text="{i18n>verticalization.baseSport}" />
                <Text text="{i18n>verticalization.baseSportTravel}" />
                <Text text="{i18n>verticalization.baseTravel}" />
            </VBox>
        </content>
    </Page>
</mvc:View>
