{
    "filters": [
        {
            "name": "tags",
            "label": "{i18n>FILTERS.Tags.Label}",
            "description": "{i18n>FILTERS.Tags.Description}",
            "type": "string",
            "visible": true
        },
        {
            "name": "system",
            "label": "{i18n>FILTERS.System.Label}",
            "description": "{i18n>FILTERS.System.Description}",
            "type": "set",
            "visible": true,
            "values": [],
            "data": {
                "json": [
                    {
                        "key": "UYZ",
                        "text":"Sales US",
                        "additionalText": "UYZ"
                    },
                    {
                        "key": "EYZ",
                        "text":"Sales EMEA",
                        "additionalText": "EYZ"
                    },
                    {
                        "key": "FIN",
                        "text":"Financials",
                        "additionalText": "FIN"
                    }
                ]
            }
        }
    ],
    "categories": [
        {
            "name": "all",
            "title": "{i18n>CATEGORIES.All.Title}",
            "shortTitle": "{i18n>CATEGORIES.All.ShortTitle}",
            "icon": "sap-icon://search",
            "card": {
                "title": "{i18n>CATEGORIES.All.Card.Title}",
                "subTitle": "{i18n>CATEGORIES.All.Card.SubTitle}"
            },
            "subCategories": [
                {
                    "name": "app",
                    "pageSize": 15
                }
            ],
            "noDataText": "{i18n>CATEGORIES.All.NoData}",
            "loadingDataText": "{i18n>CATEGORIES.All.LoadingData}"
        },
        {
            "name": "app",
            "title": "{i18n>CATEGORIES.App.Title}",
            "shortTitle": "{i18n>CATEGORIES.App.ShortTitle}",
            "filters": ["tags", "system"],
            "icon": "sap-icon://header",
            "card": {
                "title": "{i18n>CATEGORIES.App.Card.Title}",
                "subTitle": "{i18n>CATEGORIES.App.Card.SubTitle}"
            },
            "extension": "sap/ushell/test/components/cepsearchresult/app/TestAppDataExtension",
            "list": {
                "paging": true,
                "viewAll": true,
                "views": ["List", "Tile", "Card"],
                "defaultView": "List",
                "noDataText": "{i18n>CATEGORIES.App.NoData}",
                "loadingDataText": "{i18n>CATEGORIES.App.LoadingData}",
                "item": {
                    "template": { "List": "default", "Tile": "appTile" },
                    "icon": {
                        "src": "sap-icon://header",
                        "backgroundColor": "Accent9",
                        "shape": "Square",
                        "size": "S"
                    }
                },
                "data": {
                    "extension": {
                        "method": "getData",
                        "args": [
                            "{parameters>/searchTerm/value}",
                            "{paginator>/skip}",
                            "{paginator>/top}"
                        ]
                    },
                    "path": "/results",
                    "count": "/totalCount",
                    "mapping": {
                        "title": "{= ${object/visualization/title} || ${title}}",
                        "description": "{= ${object/visualization/subtitle} || ${description}}",
                        "icon": "{= ${object/visualization/icon} || ${icon}}",
                        "url": "{= ${object/visualization/url} || ${url}}",
                        "info": "{= ${object/visualization/info}}",
                        "keywords": "{= ${object/visualization/keywords}}",
                        "_viz": "{object/visualization}"
                    }
                },
                "paginator": {
                    "currentPage": 1,
                    "pageSize": 20
                }
            }
        }
    ]
}
