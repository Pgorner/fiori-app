<mvc:View
	displayBlock="true"
	height="100%"
	controllerName="sap.fe.core.fpmExplorer.controller.App"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:mvc="sap.ui.core.mvc"
>
	<App>
		<tnt:ToolPage id="toolPage">
			<tnt:header>
				<tnt:ToolHeader>
					<Button id="sideNavigationToggleButton" icon="sap-icon://menu2" type="Transparent" press="onSideNavButtonPress">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
					</Button>
					<Title text="Flexible Programming Model Explorer" class="sapUiVisibleOnlyOnDesktop sapUiHideOnPhone" />
					<IconTabHeader backgroundDesign="Transparent" id="iconTabHeader" select="onTabSelect">
						<items>
							<IconTabFilter key="overview" text="Introduction" />
							<IconTabFilter key="customElements" text="Extension Points" />
							<IconTabFilter key="buildingBlocks" text="Building Blocks" />
							<IconTabFilter key="controllerExtensions" text="Controller Extensions" />
							<IconTabSeparator />
							<IconTabFilter key="advancedFeatures" text="SAP Fiori Elements: Advanced Features" />
							<IconTabSeparator visible="{ui>/showInternal}" />
							<IconTabFilter key="internalExperiments" text="Internal Experiments" visible="{ui>/showInternal}" />
						</items>
					</IconTabHeader>
					<SearchField
						id="searchField"
						width="17%"
						placeholder="Search Samples ..."
						maxLength="1000"
						enableSuggestions="true"
						search=".onSearch"
						suggest=".onSuggest"
						suggestionItems="{
							path: 'sampleSearch>/',
							sorter: { path: 'title' }
						}"
					>
						<SuggestionItem
							text="{sampleSearch>title}"
							description="{sampleSearch>tagHit}"
							icon="{sampleSearch>icon}"
							key="{sampleSearch>key}"
						/>
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
					</SearchField>
					<Button icon="sap-icon://action-settings" type="Transparent" press="handleAppSettings('open')">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
					</Button>
				</tnt:ToolHeader>
			</tnt:header>
			<tnt:sideContent>
				<tnt:SideNavigation id="sideNavigation" selectedKey="{/selectedKey}" itemSelect="onSideNavigationItemSelect">
					<tnt:NavigationList items="{path: '/navigation'}">
						<tnt:NavigationListItem
							text="{title}"
							icon="{icon}"
							enabled="{enabled}"
							expanded="{expanded}"
							items="{path: 'items', templateShareable: false}"
							key="{key}"
							hasExpander="{hasExpander}"
							visible="{= !${hidden}}"
							select="onChapterClick"
						>
							<tnt:NavigationListItem text="{title}" key="{key}" enabled="{enabled}" visible="{= !${hidden}}">
								<tnt:customData>
									<core:CustomData key="type" value="child" />
								</tnt:customData>
							</tnt:NavigationListItem>
							<tnt:customData>
								<core:CustomData key="type" value="root" />
							</tnt:customData>
						</tnt:NavigationListItem>
					</tnt:NavigationList>
					<tnt:fixedItem>
						<tnt:NavigationList itemSelect="onSideNavigationFixedItemPress">
							<tnt:NavigationListItem icon="sap-icon://compare" key="legal" text="Legal" />
							<tnt:NavigationListItem icon="sap-icon://locked" key="privacy" text="Privacy" />
							<tnt:NavigationListItem icon="sap-icon://document-text" key="terms_of_use" text="Terms of Use" />
						</tnt:NavigationList>
					</tnt:fixedItem>
				</tnt:SideNavigation>
			</tnt:sideContent>
			<tnt:mainContents>
				<NavContainer id="navContainer" />
			</tnt:mainContents>
		</tnt:ToolPage>
	</App>
</mvc:View>
