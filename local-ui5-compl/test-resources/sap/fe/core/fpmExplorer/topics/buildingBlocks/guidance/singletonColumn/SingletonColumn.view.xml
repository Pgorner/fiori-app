<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	controllerName="sap.fe.core.fpmExplorer.singletonColumn.SingletonColumn"
>
	<Panel
		headerText="Table with the singleton column"
		class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginEnd"
		expandable="true"
		expanded="true"
	>
		<macros:FilterBar metaPath="@com.sap.vocabularies.UI.v1.SelectionFields#SF2" id="FilterBarOnSingletonTableViaNavigation" />
		<layoutData>
			<FlexItemData growFactor="0" shrinkFactor="1" />
		</layoutData>
		<macros:Table metaPath="@com.sap.vocabularies.UI.v1.LineItem" readOnly="true" id="ColumnBasedOnSingleton" />
	</Panel>
</mvc:View>
