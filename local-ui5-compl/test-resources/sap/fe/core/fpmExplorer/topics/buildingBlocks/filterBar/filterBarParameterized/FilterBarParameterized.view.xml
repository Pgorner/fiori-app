<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:macros="sap.fe.macros"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:l="sap.ui.layout"
	xmlns:v="sap.ui.fl.variants"
	xmlns:f="sap.f"
	controllerName="sap.fe.core.fpmExplorer.filterBarParameterized.FilterBarParameterized"
>
	<FlexBox direction="Column" fitContainer="true" justifyContent="Start">
		<f:DynamicPage id="FilterBarParameterized" class="sapUiResponsiveContentPadding">
			<f:header>
				<f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
					<VBox id="_IDGenVBox1">
						<macros:FilterBar
							metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"
							id="FilterBar"
							showMessages="true"
							search=".handlers.onFiltersChanged"
						/>
					</VBox>
				</f:DynamicPageHeader>
			</f:header>
		</f:DynamicPage>
		<Panel expanded="{fbConditions>/expanded}" height="100%" headerText="Conditions from Filter Bar" expandable="true">
			<FlexBox direction="Column" fitContainer="true" justifyContent="Start">
				<ce:CodeEditor
					height="100%"
					id="filtersDisplay"
					type="json"
					lineNumbers="false"
					value="{fbConditions>/allFilters}"
					editable="false"
				>
					<ce:layoutData>
						<FlexItemData growFactor="1" shrinkFactor="1" />
					</ce:layoutData>
				</ce:CodeEditor>
			</FlexBox>
			<layoutData>
				<FlexItemData growFactor="1" shrinkFactor="1" />
			</layoutData>
		</Panel>
	</FlexBox>
</mvc:View>
