<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:macros="sap.fe.macros" xmlns:core="sap.ui.core">
	<f:Form binding="{path:'/RootEntity(\'1\')'}">
		<f:layout>
			<f:ColumnLayout />
		</f:layout>
		<f:formContainers>
			<f:FormContainer>
				<f:title>
					<core:Title text="Field Shown as Object Status" />
				</f:title>
				<f:formElements>
					<f:FormElement label="DataField with Static Criticality">
						<f:fields>
							<macros:Field
								metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#ObjectStatus/Data/0"
								readOnly="true"
								id="ObjectStatus1"
							/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="DataField with Dynamic Criticality">
						<f:fields>
							<macros:Field
								metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#ObjectStatus/Data/1"
								readOnly="true"
								id="ObjectStatus2"
							/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="DataFieldForAnnotation Pointing to a Datapoint with Criticality">
						<f:fields>
							<macros:Field
								metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#ObjectStatus/Data/2"
								readOnly="true"
								id="ObjectStatus4"
							/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="DataPoint Used Directly">
						<f:fields>
							<macros:Field
								metaPath="@com.sap.vocabularies.UI.v1.DataPoint#criticalityProperty"
								readOnly="true"
								id="ObjectStatus5"
							/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>

			<f:FormContainer>
				<f:title>
					<core:Title text="Field Shown as Object Link" />
				</f:title>
				<f:formElements>
					<f:FormElement label="DataFieldWithUrl">
						<f:fields>
							<macros:Field metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#Link/Data/0" readOnly="true" id="Link1" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="DataFieldWithUrlWithTargetBlank">
						<f:fields>
							<macros:Field metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#Link/Data/1" readOnly="true" id="Link2" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="DataFieldWithAction">
						<f:fields>
							<macros:Field metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#Link/Data/2" readOnly="true" id="Link3" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="DataFieldWithIntentBaseNavigation (just for demo - navigation not working)">
						<f:fields>
							<macros:Field metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#Link/Data/3" readOnly="true" id="Link4" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Mail">
						<f:fields>
							<macros:Field metaPath="Mail" readOnly="true" id="Link5" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Phone">
						<f:fields>
							<macros:Field metaPath="Phone" readOnly="true" id="Link6" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>

			<f:FormContainer>
				<f:title>
					<core:Title text="Field Showing a DataPoint" />
				</f:title>
				<f:formElements>
					<f:FormElement label="Rating Indicator">
						<f:fields>
							<macros:Field metaPath="@com.sap.vocabularies.UI.v1.DataPoint#Rating" readOnly="true" id="DataPoint1" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Progress Bar">
						<f:fields>
							<macros:Field metaPath="@com.sap.vocabularies.UI.v1.DataPoint#Progress" readOnly="true" id="DataPoint2" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Object Number">
						<f:fields>
							<macros:Field metaPath="@com.sap.vocabularies.UI.v1.DataPoint#ObjectNumber" readOnly="true" id="DataPoint3" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Object Status">
						<f:fields>
							<macros:Field
								metaPath="@com.sap.vocabularies.UI.v1.DataPoint#criticalityProperty"
								readOnly="true"
								id="ObjectStatus3"
							/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>

			<f:FormContainer>
				<f:title>
					<core:Title text="Field Shown as File or Avatar" />
				</f:title>
				<f:formElements>
					<f:FormElement label="Avatar with Icon">
						<f:fields>
							<macros:Field metaPath="Icon" readOnly="true" id="Avatar" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Avatar with ImageUrl">
						<f:fields>
							<macros:Field metaPath="ImageUrl" readOnly="true" id="Avatar2" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="File">
						<f:fields>
							<macros:Field metaPath="File" readOnly="true" id="File" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="Field Shown as a MaskInput" />
				</f:title>
				<f:formElements>
					<f:FormElement label="Phone number">
						<f:fields>
							<macros:Field metaPath="MaskedInputPhone" readOnly="true" id="MaskedInputPhone" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Registration number">
						<f:fields>
							<macros:Field metaPath="MaskedInputRegistration" readOnly="true" id="MaskedInputRegistration" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="SAP item ID with escape character in mask">
						<f:fields>
							<macros:Field metaPath="MaskedInputSAP" readOnly="true" id="MaskedInputSAP" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>
