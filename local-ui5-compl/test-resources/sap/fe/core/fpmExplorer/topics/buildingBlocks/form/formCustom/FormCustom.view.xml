<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:macros="sap.fe.macros" xmlns="sap.m">
	<Panel headerText="Form Based on a Reference Facet" binding="{path:'/RootEntity(\'1\')'}">
		<macros:Form metaPath="/RootEntity/@com.sap.vocabularies.UI.v1.FieldGroup#GeneralInformation" id="myForm" title="Something Else">
			<macros:FormElement
				metaPath="ID"
				id="formElementMacroID"
				label="ID Property After Number"
				placement="After"
				anchor="DataField::NumberProperty"
			/>
			<macros:FormElement metaPath="DateProperty" id="customSlider" placement="Before" label="Slider Example">
				<macros:fields>
					<Slider />
				</macros:fields>
			</macros:FormElement>
		</macros:Form>
	</Panel>
</mvc:View>
