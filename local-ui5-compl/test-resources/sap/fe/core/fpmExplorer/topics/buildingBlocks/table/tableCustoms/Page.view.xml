<mvc:View
	controllerName="sap.fe.core.fpmExplorer.tableCustoms.Page"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	xmlns:macrosTable="sap.fe.macros.table"
>
	<!--
		The contextPath is set to "/RootEntity" - therefore all tables use a relative metaPath to "/RootEntity"
	-->

	<NavContainer id="wizardNavContainer">
		<pages>
			<Page id="mdcTablePageCustomActions">
				<Panel headerText="Table with Custom Actions">
					<macros:Table
						metaPath="@com.sap.vocabularies.UI.v1.LineItem"
						readOnly="true"
						id="LineItemTablePageCustomActions"
						isSearchable="false"
						beforeRebindTable=".tableRefreshed"
					>
						<macros:actions>
							<macrosTable:Action
								key="customAction"
								text="My Custom Action"
								press=".onPressAction"
								placement="After"
								anchor="DataFieldForActionGroup::TableActionGroup"
								requiresSelection="true"
							/>
							<macrosTable:ActionGroup
								text="Manifest Action Group"
								placement="After"
								anchor="customAction"
								key="customActionGroup"
							>
								<macrosTable:Action text="Menu Action 1" press=".onPressMenuAction" key="action1" />
								<macrosTable:Action text="Menu Action 2" press=".onPressMenuAction" enabled="false" key="action2" />
							</macrosTable:ActionGroup>
						</macros:actions>
					</macros:Table>
				</Panel>
				<Panel headerText="Table with Custom Columns">
					<macros:Table metaPath="@com.sap.vocabularies.UI.v1.LineItem" readOnly="true" id="LineItemTablePageCustomColumns">
						<macros:columns>
							<macrosTable:Column header="My Column" importance="High" width="10em" key="FirstColumnKey">
								<GenericTag text="{TagText}" design="StatusIconHidden" status="{TagStatus}" />
							</macrosTable:Column>
							<macrosTable:Column header="Another Column" key="SecondColumnKey">
								<Text text="Some Text" />
							</macrosTable:Column>
							<macrosTable:Column header="My Action Column" importance="Low" key="ThirdColumnKey">
								<Button press=".onPressInColumn" text="I'm a button" />
							</macrosTable:Column>
							<macrosTable:Column
								key="FourthColumnKey"
								header="Column with all possible properties"
								width="12em"
								importance="High"
								horizontalAlign="Begin"
								placement="Before"
								anchor="DataField::SalesOrderItem"
								properties="ID,BooleanProperty"
							>
								<Text text="Any non particular text" />
							</macrosTable:Column>
							<macrosTable:Column
								key="FourthColumnKey"
								header="Column with all possible properties"
								width="12em"
								importance="High"
								horizontalAlign="Begin"
								placement="Before"
								anchor="DataField::SalesOrderItem"
								properties="ID,BooleanProperty"
							>
								<Text text="Any non particular text" />
							</macrosTable:Column>
						</macros:columns>
					</macros:Table>
					<Button text="Hide my column" press=".hideMyColumn" enabled="{ui>/myColumnVisible}" />
					<Button text="Show my column" press=".showMyColumn" enabled="{= !${ui>/myColumnVisible}}" />
				</Panel>
				<Panel headerText="Table with Custom Handlers for Events 'Row Press' and 'Selection Change'">
					<macros:Table
						metaPath="@com.sap.vocabularies.UI.v1.LineItem"
						readOnly="true"
						id="LineItemTableRowPress"
						rowPress=".onRowPressed"
						selectionChange=".onTableSelectionChanged"
					/>
				</Panel>
			</Page>
		</pages>
	</NavContainer>
</mvc:View>
