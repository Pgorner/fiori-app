<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	controllerName="sap.fe.core.fpmExplorer.fieldEvents.FieldEvents"
	xmlns="sap.m"
>
	<Panel headerText="Field Events" binding="{path:'/Entities(1)'}">
		<FlexBox alignItems="Center" justifyContent="Start">
			<Label text="value modification trigger events" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/Entities/stringProperty" id="StringProperty" change=".onFieldChange" />
		</FlexBox>
		<FlexBox alignItems="Center" justifyContent="Start">
			<Label text="Current value {ui>/currentValue}" />
		</FlexBox>
		<FlexBox alignItems="Center" justifyContent="Start">
			<Button text="Give me the current value" press=".getFieldValue" />
		</FlexBox>
	</Panel>
</mvc:View>
