<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:macros="sap.fe.macros" xmlns="sap.m">
	<!--
		The contextPath is set to "/RootEntity" - therefore all forms use a relative metaPath to "/RootEntity"
	-->
	<Page enableScrolling="true">
		<Panel headerText="Form Based on a Reference Facet" binding="{path:'/RootEntity(\'1\')'}">
			<macros:Form metaPath="$Type/@com.sap.vocabularies.UI.v1.Facets/2" id="myForm" title="Something Else" />
		</Panel>
		<Panel headerText="Form Based on a Collection Facet" binding="{path:'/RootEntity(\'1\')'}">
			<macros:Form metaPath="$Type/@com.sap.vocabularies.UI.v1.Facets/0" id="myOtherForm" readOnly="true" />
		</Panel>
		<Panel headerText="Form with responsive grid layout" binding="{path:'/RootEntity(\'1\')'}">
			<macros:Form metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#OtherGeneralInformation" id="myResponsiveForm">
				<macros:layout type="ResponsiveGridLayout" columnsM="1" singleContainerFullSize="false" labelSpanM="6" />
			</macros:Form>
		</Panel>
		<Panel headerText="Form with responsive grid layout with default column size" binding="{path:'/RootEntity(\'1\')'}">
			<macros:Form metaPath="$Type/@com.sap.vocabularies.UI.v1.Facets/1" id="myOtherForm3" readOnly="true" />
		</Panel>
		<Panel headerText="Form based on a FieldGroup reached via a navigation" binding="{path:'/RootEntity(\'1\')'}">
			<macros:Form metaPath="_OneToOne/@com.sap.vocabularies.UI.v1.FieldGroup#GeneralInformation" id="myOneToOneForm" />
		</Panel>
	</Page>
</mvc:View>
