<mvc:View
	controllerName="sap.fe.core.fpmExplorer.tableEdit.TableEdit"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
>
	<!--
		The contextPath is set to "/RootEntity" - therefore all tables use a relative metaPath to "/RootEntity"
	-->

	<NavContainer id="wizardNavContainer">
		<pages>
			<Page id="mdcTablePageEdit">
				<Panel headerText="{i18n>pageSettings}">
					<headerToolbar>
						<OverflowToolbar>
							<CheckBox text="{i18n>toggleEditMode}" selected="{ui>/isEditable}" select=".onSelectEdit" />
							<CheckBox text="{i18n>toggleTableBusy}" selected="{ui>/isBusy}" select=".onSelectBusy" />
						</OverflowToolbar>
					</headerToolbar>
					<Panel headerText="{i18n>tableEditFlow}">
						<macros:Table
							metaPath="@com.sap.vocabularies.UI.v1.LineItem"
							id="LineItemTablePageEdit"
							busy="{ui>/isBusy}"
							enablePaste="true"
							disableCopyToClipboard="true"
						/>
					</Panel>
					<Panel headerText="{i18n>tableDisplayMode}">
						<macros:Table
							metaPath="@com.sap.vocabularies.UI.v1.LineItem"
							readOnly="true"
							id="LineItemTableAlwaysDisplay"
							busy="{ui>/isBusy}"
						/>
					</Panel>
					<Panel headerText="{i18n>tableEditMode}">
						<macros:Table
							metaPath="@com.sap.vocabularies.UI.v1.LineItem"
							readOnly="false"
							id="LineItemTableAlwaysEdit"
							busy="{ui>/isBusy}"
							enableExport="false"
						/>
					</Panel>
					<Panel headerText="{i18n>tableCreationMode}">
						<macros:Table
							metaPath="@com.sap.vocabularies.UI.v1.LineItem"
							readOnly="false"
							id="LineItemTableCreationMode"
							busy="{ui>/isBusy}"
							enableExport="false"
						>
							<creationMode name="InlineCreationRows" inlineCreationRowsHiddenInEditMode="true" />
						</macros:Table>
					</Panel>
				</Panel>
			</Page>
		</pages>
	</NavContainer>
</mvc:View>
