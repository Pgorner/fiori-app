<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:macros="sap.fe.macros" xmlns:f="sap.ui.layout.form" xmlns="sap.m">
	<!--
		The contextPath is set to "/RootEntity" - therefore all form elements use a relative metaPath to "/RootEntity"
	-->

	<Panel headerText="Label Set Manually" binding="{path:'/RootEntity(\'1\')'}">
		<f:Form>
			<f:layout>
				<f:ColumnLayout columnsM="2" columnsL="3" columnsXL="4" labelCellsLarge="12" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<macros:FormElement metaPath="ID" id="formElementMacroID" label="My Custom Label" />
						<macros:FormElement metaPath="StringProperty" id="formElementStringProperty" label="Another Custom Label" />
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</Panel>
	<Panel headerText="Label Set Automatically" binding="{path:'/RootEntity(\'1\')'}">
		<f:Form>
			<f:layout>
				<f:ColumnLayout columnsM="2" columnsL="3" columnsXL="4" labelCellsLarge="12" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<macros:FormElement metaPath="ID" id="formElementMacroID2" />
						<macros:FormElement metaPath="StringProperty" id="formElementStringProperty2" />
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</Panel>
</mvc:View>
