<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	controllerName="sap.fe.core.fpmExplorer.chartSelectionMode.ChartSelectionMode"
>
	<!--
		The contextPath is set to "/RootEntity" - therefore all charts use a relative metaPath to "/RootEntity"
	-->

	<Page>
		<Panel headerText="Selection Mode = MULTIPLE">
			<VBox fitContainer="true" alignItems="Stretch" alignContent="Stretch" justifyContent="Start" renderType="Div">
				<macros:Chart
					id="chartSelectionModeMultiple"
					metaPath="@com.sap.vocabularies.UI.v1.Chart"
					selectionChange=".onChartSelectionChanged"
					personalization="Sort,Type,Item"
					selectionMode="Multiple"
				/>
			</VBox>
		</Panel>
		<Panel headerText="Selection Mode = SINGLE">
			<VBox fitContainer="true" alignItems="Stretch" alignContent="Stretch" justifyContent="Start" renderType="Div">
				<macros:Chart
					id="chartSelectionModeSingle"
					metaPath="@com.sap.vocabularies.UI.v1.Chart"
					selectionChange=".onChartSelectionChanged"
					personalization="Sort,Type,Item"
					selectionMode="Single"
				/>
			</VBox>
		</Panel>
	</Page>
</mvc:View>
