<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	controllerName="sap.fe.core.fpmExplorer.fieldMessages.FieldMessages"
	xmlns="sap.m"
>
	<Panel headerText="Field Messages" binding="{path:'/Entities(1)'}">
		<FlexBox alignItems="Center" justifyContent="Start">
			<Label text="editable field:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/Entities/stringProperty" id="StringProperty" />
		</FlexBox>
		<FlexBox alignItems="Center" justifyContent="Start">
			<Button press=".onAddMessage" text="Add error message" />
			<Button press=".onRemoveAll" text="Remove all messages" />
		</FlexBox>
	</Panel>
</mvc:View>
