<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:macros="sap.fe.macros" xmlns:core="sap.ui.core">
	<f:Form binding="{path:'/RootEntity(\'1\')'}">
		<f:layout>
			<f:ColumnLayout />
		</f:layout>
		<f:formContainers>
			<f:FormContainer>
				<f:title>
					<core:Title text="Field that opens a QuickView showing QuickViewFacets for an entity" />
				</f:title>
				<f:formElements>
					<f:FormElement label="QuickView using navigation *_NavProp1* in path targeting *Name* that is a key">
						<f:fields>
							<macros:Field metaPath="_NavProp1/Name" readOnly="true" id="quickView1" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="No QuickView when using a path with nav but not targeting a key property">
						<f:fields>
							<macros:Field metaPath="_NavProp1/Phone" readOnly="true" id="quickView2" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="QuickView because *ChildID* is a referential constraint">
						<f:fields>
							<macros:Field metaPath="ChildID" readOnly="true" id="quickView3" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer binding="{path:'_NavProp1'}">
				<f:title>
					<core:Title text="Field that Opens a Contact Card" />
				</f:title>
				<f:formElements>
					<f:FormElement label="Contact card">
						<f:fields>
							<macros:Field
								metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#Contact/Data/0"
								contextPath="_NavProp1"
								readOnly="true"
								id="conatct1"
							/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="Field that opens a QuickView with a custom Semantic Object" />
				</f:title>
				<f:formElements>
					<f:FormElement label="QuickView with custom Semantic Object">
						<f:fields>
							<macros:Field metaPath="AnotherChildID" semanticObject="SO0" readOnly="true" id="quickView4" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="QuickView with a custom Semantic Object defined by a formatter">
						<f:fields>
							<macros:Field
								metaPath="AnotherChildID"
								semanticObject="{path: 'AnotherChildID', targetType: 'any', formatter: '.getSemanticObject'}"
								readOnly="true"
								id="quickView5"
							/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="QuickView with a custom Semantic Object defined by dynamic expression">
						<f:fields>
							<macros:Field metaPath="AnotherChildID2" readOnly="true" id="quickView6" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>
