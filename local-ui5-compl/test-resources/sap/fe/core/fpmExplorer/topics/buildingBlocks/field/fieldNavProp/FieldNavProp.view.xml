<mvc:View
	controllerName="sap.fe.core.fpmExplorer.fieldNavProp.FieldNavProp"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
>
	<!--
		The contextPath is set to "/RootEntity" - therefore all fields use a relative metaPath to "/RootEntity"
	-->
	<Page>
		<Panel headerText="Basic field in display mode" binding="{path:'/RootEntity(\'1\')'}">
			<headerToolbar>
				<OverflowToolbar>
					<CheckBox text="Toggling the Page Edit Mode" selected="{ui>/isEditable}" select=".onSelect" />
				</OverflowToolbar>
			</headerToolbar>
			<Panel headerText="Editing Properties from 1:1 Relationships" binding="{path:'/RootEntity(\'1\')'}">
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Child ID " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="ChildID" readOnly="true" id="ChildID" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="VH Prop " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="PropertyWithValueHelpRoot" id="VHProp" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Description Property " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="PropertyWithValueHelpRootText" id="DescriptionOfVH" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Editable Description " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/Description" id="OneToOneDescription" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Readonly Description " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/Description" id="OneToOneDescriptionNonEdit" readOnly="true" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="String Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/StringProperty" id="StringField" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Integer Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/IntegerProperty" id="IntegerField" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Number Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/NumberProperty" id="NumberField" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Boolean Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/BooleanProperty" id="BooleanField" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Date Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/DateProperty" id="DateField" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Time Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/TimeProperty" id="TimeProperty" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Property with Unit" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/PropertyWithUnit" id="PropertyWithUnit" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Property with Currency" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/PropertyWithCurrency" id="PropertyWithCurrency" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Editable property with value help" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/PropertyWithValueHelpNav1" id="OneToOneValueHelp" />
				</FlexBox>
				<Panel binding="{_NavProp1}">
					<Label text="Scope block with binding on _OneToOne " class="sapUiSmallMarginEnd" />
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="Editable Description " class="sapUiSmallMarginEnd" />
						<macros:Field metaPath="_NavProp1/Description" id="OneToOneDescriptionScoped" />
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="Readonly Description " class="sapUiSmallMarginEnd" />
						<macros:Field metaPath="_NavProp1/Description" id="OneToOneDescriptionScopedNonEdit" readOnly="true" />
					</FlexBox>
				</Panel>
				<Panel binding="{_NavProp1}">
					<template:with path="contextPath>_NavProp1" var="contextPath">
						<Label text="Scope block with binding on _OneToOne and template scoping " class="sapUiSmallMarginEnd" />
						<FlexBox alignItems="Center" justifyContent="Start">
							<Label text="Editable Description " class="sapUiSmallMarginEnd" />
							<macros:Field metaPath="Description" id="OneToOneDescriptionTemplateScoped" />
						</FlexBox>
						<FlexBox alignItems="Center" justifyContent="Start">
							<Label text="Readonly Description " class="sapUiSmallMarginEnd" />
							<macros:Field metaPath="Description" id="OneToOneDescriptionTemplateScopedNonEdit" readOnly="true" />
						</FlexBox>
					</template:with>
				</Panel>
			</Panel>
			<Panel>
				<MessageStrip
					text="Please find detaild information on how to configure a field value help in section 'SAP Fiori Elements: Advanced Features' "
					showIcon="true"
					showCloseButton="false"
					class="sapUiMediumMarginBottom"
				/>
			</Panel>
			<Panel headerText="Editing Properties from a Nested 1:1 Relationship" binding="{path:'/RootEntity(\'1\')'}">
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Editable Description " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/_NavProp2/Description" id="OneToOneToOneDescription" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Readonly Description " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/_NavProp2/Description" id="OneToOneToOneDescriptionNonEdit" readOnly="true" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Editable property with value help" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_NavProp1/_NavProp2/PropertyWithValueHelpNav2" id="OneToOneToOneValueHelp" />
				</FlexBox>
			</Panel>
		</Panel>
	</Page>
</mvc:View>
