<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	controllerName="sap.fe.core.fpmExplorer.fieldValueHandling.FieldValueHandling"
	xmlns="sap.m"
>
	<Panel headerText="Field Value Handling" binding="{path:'/RootEntity(1)'}">
		<FlexBox alignItems="Center" justifyContent="Start">
			<Label text="Example for setValue" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="stringProperty" id="stringProperty" />
		</FlexBox>
		<FlexBox alignItems="Center" justifyContent="Start">
			<Label text="Example for getValue" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="integerValue" id="integerValue" />
		</FlexBox>
		<FlexBox alignItems="Center" justifyContent="Start">
			<Button text="Change field value via API" press=".updateFieldValue" />
			<Button text="Get field value via API" press=".getFieldValue" />
		</FlexBox>
		<FlexBox alignItems="Center" justifyContent="Start">
			<Button text="Disable field StringProperty via API" press=".setStringPropertyDisabled" />
			<Button text="Enable field StringProperty via API" press=".setStringPropertyEnabled" />
		</FlexBox>
	</Panel>
</mvc:View>
