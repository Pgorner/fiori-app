<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<FlexBox direction="Column" fitContainer="true" justifyContent="Start">
		<HBox alignItems="Center" class="sapUi-Std-PaddingS">
			<Button
				width="100%"
				text="getVariantManagement"
				press=".extension.sap.fe.core.fpmExplorer.OPExtend.tableGetVariantManagement"
			/>
			<Text id="getVariantManagementText" text="" width="30rem" class="sapUiSmallMargin" />
		</HBox>
		<HBox alignItems="Center" class="sapUi-Std-PaddingS">
			<Button
				width="100%"
				text="setVariantManagement"
				press=".extension.sap.fe.core.fpmExplorer.OPExtend.tableSetVariantManagement"
				type="{interactionModel>/setPVButton/type}"
			/>
			<Input id="setVariantManagementInput" placeholder="Enter variant management key" width="30rem" class="sapUiSmallMargin" />
		</HBox>
		<HBox alignItems="Center" class="sapUi-Std-PaddingS">
			<Button text="Hide Child description column" press=".extension.sap.fe.core.fpmExplorer.OPExtend.hideChildDescriptionColumn" />
			<Button text="Show Child name column" press=".extension.sap.fe.core.fpmExplorer.OPExtend.showChildDescriptionColumn" />
		</HBox>
	</FlexBox>
</core:FragmentDefinition>
