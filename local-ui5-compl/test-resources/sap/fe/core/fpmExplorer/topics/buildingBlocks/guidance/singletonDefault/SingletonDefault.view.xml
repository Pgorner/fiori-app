<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	controllerName="sap.fe.core.fpmExplorer.singletonDefault.SingletonDefault"
>
	<FlexBox class="sapUiMediumMarginBegin sapUiSmallMarginTop">
		<Text
			text='A singleton is a special one-element entity introduced in OData V4. It can be addressed directly by its name from the service root without specifying the entityâ€™s keys. The following examples show how to use the Field building block with a singleton.'
		/>
	</FlexBox>

	<Panel headerText="Singleton Form">
		<macros:Form metaPath="/SingletonPropertyFields/@com.sap.vocabularies.UI.v1.FieldGroup#GeneralInformation" id="myOtherForm" />
	</Panel>

	<Panel headerText="Field Building Block" class="sapUiSmallMarginBegin sapUiSmallMarginTop">
		<FlexBox>
			<Label text="Property with Value Help:" class="sapUiSmallMarginEnd" />
			<macros:Field
				metaPath="/SingletonPropertyFields/VHproperty"
				readOnly="false"
				id="SingletonValueHelp"
				value="{dialogModel>/VHproperty}"
			/>
		</FlexBox>

		<FlexBox>
			<Label text="MultiValueField with Value Help:" class="sapUiSmallMarginEnd" />
			<macros:MultiValueField
				metaPath="/SingletonPropertyFields/_toChildren/name"
				readOnly="false"
				id="MultiValueFieldValueHelp"
				items="{dialogModel>/MVFproperty}"
			/>
		</FlexBox>

		<FlexBox>
			<Label text="String Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/StringProperty" readOnly="true" id="SingletonStringField" />
		</FlexBox>

		<FlexBox>
			<Label text="Integer Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/IntegerProperty" readOnly="true" id="SingletonIntegerField" />
		</FlexBox>

		<FlexBox>
			<Label text="Number Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/NumberProperty" readOnly="true" id="SingletonNumberField" />
		</FlexBox>

		<FlexBox>
			<Label text="Boolean Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/BooleanProperty" readOnly="true" id="SingletonBooleanField" />
		</FlexBox>

		<FlexBox>
			<Label text="Date Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/DateProperty" readOnly="true" id="SingletonDateField" />
		</FlexBox>

		<FlexBox>
			<Label text="Time Property" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/TimeProperty" readOnly="true" id="SingletonTimeField" />
		</FlexBox>

		<FlexBox>
			<Label text="WithUnit Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/PropertyWithUnit" readOnly="true" id="SingletonPropertyWithUnitField" />
		</FlexBox>

		<FlexBox>
			<Label text="WithCurrency Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/PropertyWithCurrency" readOnly="true" id="SingletonPropertyCurrencyField" />
		</FlexBox>
		<FlexBox>
			<Label text="Unit Property (Applying UI.Hidden annotation):" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/Unit" readOnly="true" id="SingletoUnitField" />
		</FlexBox>
		<FlexBox>
			<Label text="Currency Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/Currency" readOnly="true" id="SingletonCurrencyField" />
		</FlexBox>
		<FlexBox>
			<Label text="Text Property:" class="sapUiSmallMarginEnd" />
			<macros:Field metaPath="/SingletonPropertyFields/TextProperty" readOnly="true" id="SingletonTextPropertyField" />
		</FlexBox>
	</Panel>
	<FlexBox class="sapUiMediumMarginBegin sapUiSmallMarginTop">
		<Text text='The following examples show how to use the table building block with a singleton.' />
	</FlexBox>
	<Panel headerText="Table Building Block" class="sapUiSmallMarginBegin sapUiSmallMarginTop">
		<macros:Table metaPath="/User/Friends/@com.sap.vocabularies.UI.v1.LineItem" readOnly="true" id="LineItemTableSingleton" />
	</Panel>
</mvc:View>
