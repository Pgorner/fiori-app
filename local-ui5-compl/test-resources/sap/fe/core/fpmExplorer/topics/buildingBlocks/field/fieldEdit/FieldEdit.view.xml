<mvc:View
	controllerName="sap.fe.core.fpmExplorer.fieldEdit.FieldEdit"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
>
	<!--
		The contextPath is set to "/RootEntity" - therefore all fields use a relative metaPath to "/RootEntity"
	-->
	<Page>
		<Panel headerText="Basic Field in Display Mode" binding="{path:'/RootEntity(\'1\')'}">
			<headerToolbar>
				<OverflowToolbar>
					<CheckBox text="Toggle Page Edit Mode" selected="{ui>/isEditable}" select=".onSelect" />
				</OverflowToolbar>
			</headerToolbar>
			<Panel headerText="Non-Editable Property" binding="{path:'/RootEntity(\'1\')'}">
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Key Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="KeyProperty" id="KeyProperty" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Computed Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="ComputedProperty" id="ComputedProperty" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Immmutable Property" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="ImmutableProperty" id="ImmutableProperty" />
				</FlexBox>
				<Panel binding="{path:'/RootEntity(\'1\')'}">
					<Label text="Non-Editable even with readOnly=false:" class="sapUiSmallMarginEnd" />
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="Key Property" class="sapUiSmallMarginEnd" />
						<macros:Field metaPath="KeyProperty" id="KeyPropertyEditable" readOnly="false" />
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="Computed Property" class="sapUiSmallMarginEnd" />
						<macros:Field metaPath="ComputedProperty" id="ComputedPropertyEditable" readOnly="false" />
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="Immutable Property" class="sapUiSmallMarginEnd" />
						<macros:Field metaPath="ImmutableProperty" id="ImmutablePropertyEditable" readOnly="false" />
					</FlexBox>
				</Panel>
			</Panel>
			<Panel headerText="Property with Field Control" binding="{path:'/RootEntity(\'1\')'}">
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Static Field Control (set to #ReadOnly)" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="FieldControlReadOnly" id="FieldControlreadOnly" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Static Field Control (set to #Inapplicable)" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="FieldControlInapplicable" id="FieldControlInapplicable" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Dynamic Field Control (Path Based)" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="FieldControlValue" id="FieldControlValue" />
					<macros:Field metaPath="FieldControlDynamic" id="FieldControlDynamic" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Dynamic Field Control (Expression Based, Editable if Value &lt;&gt; 5)" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="FieldControlDynamicIfValue" id="FieldControlDynamicIfValue" />
					<macros:Field metaPath="FieldControlDynamicIf" id="FieldControlDynamicIf" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Amount with Value help on the currency" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="PropertyWithCurrency" id="PropertyWithCurrency" />
				</FlexBox>
			</Panel>
			<Panel headerText="Property with Value help" binding="{path:'/RootEntity(\'1\')'}">
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Display of a hierarchy within a value help" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="preferredNode" id="TreeTableValueHelp" />
				</FlexBox>
			</Panel>
			<Panel headerText="Editing Properties from 1:1 Relationships" binding="{path:'/RootEntity(\'1\')'}">
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Editable Description " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_OneToOne/Description" id="OneToOneDescription" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="ReadOnly Description " class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="_OneToOne/Description" id="OneToOneDescriptionNonEdit" readOnly="true" />
				</FlexBox>
				<Panel>
					<Label text="Scope block with binding on Association _OneToOne:" class="sapUiSmallMarginEnd" />
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="Editable Description " class="sapUiSmallMarginEnd" />
						<macros:Field metaPath="_OneToOne/Description" id="OneToOneDescriptionScoped" />
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="ReadOnly Description " class="sapUiSmallMarginEnd" />
						<macros:Field metaPath="_OneToOne/Description" readOnly="true" id="OneToOneDescriptionScopedNonEdit" />
					</FlexBox>
				</Panel>
				<Panel binding="{_OneToOne}">
					<Label text="Scope Block With Binding on Association _OneToOne and Template Scoping:" class="sapUiSmallMarginEnd" />
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="Editable Description " class="sapUiSmallMarginEnd" />
						<macros:Field metaPath="Description" id="OneToOneDescriptionTemplateScoped" contextPath="_OneToOne" />
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="Start">
						<Label text="ReadOnly Description " class="sapUiSmallMarginEnd" />
						<macros:Field
							metaPath="Description"
							id="OneToOneDescriptionTemplateScopedNonEdit"
							readOnly="true"
							contextPath="_OneToOne"
						/>
					</FlexBox>
				</Panel>
			</Panel>
			<Panel headerText="Mask Input" binding="{path:'/RootEntity(\'1\')'}">
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Phone number" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="MaskedInputPhone" id="MaskedInputPhone" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="Registration number" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="MaskedInputRegistration" id="MaskedInputRegistration" />
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Start">
					<Label text="SAP item ID" class="sapUiSmallMarginEnd" />
					<macros:Field metaPath="MaskedInputSAP" id="MaskedInputSAP" />
				</FlexBox>
			</Panel>
		</Panel>
	</Page>
</mvc:View>
