<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	controllerName="sap.fe.core.fpmExplorer.paginatorDefault.PaginatorDefault"
	xmlns:f="sap.ui.layout.form"
>
	<NavContainer id="wizardNavContainer">
		<pages>
			<Page id="mdcTablePage">
				<Panel headerText="Table in Display Mode">
					<Table id="LineItemTable" inset="false" items="{path: '/RootEntity'}">
						<columns>
							<Column>
								<Text text="ID" />
							</Column>
							<Column>
								<Text text="Integer Property" />
							</Column>
							<Column>
								<Text text="Number Property" />
							</Column>
							<Column>
								<Text text="String Property" />
							</Column>
						</columns>
						<items>
							<ColumnListItem press="onRowPressed" type="Navigation">
								<cells>
									<Text text="{ID}" />
									<Text text="{IntegerProperty}" />
									<Text text="{NumberProperty}" />
									<Text text="{StringProperty}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</Panel>
			</Page>
			<Page id="PaginatorPage">
				<customHeader>
					<Toolbar>
						<Button press=".onNavBack" type="Back" />
						<ToolbarSpacer />
						<Title text="Paginator Macro" level="H2" />
						<ToolbarSpacer />
						<macros:Paginator id="paginator" ariaTitle="{ID}"/>
					</Toolbar>
				</customHeader>
				<Panel headerText="Label Set Manually" id="form">
					<f:Form>
						<f:layout>
							<f:ColumnLayout columnsM="2" columnsL="3" columnsXL="4" labelCellsLarge="12" />
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<macros:FormElement metaPath="ID" id="formElementMacroID" label="My Custom Label" />
									<macros:FormElement
										metaPath="StringProperty"
										id="formElementStringProperty"
										label="Another Custom Label"
									/>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</Panel>
			</Page>
		</pages>
	</NavContainer>
</mvc:View>
