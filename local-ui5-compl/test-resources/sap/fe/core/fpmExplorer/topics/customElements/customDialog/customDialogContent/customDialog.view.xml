<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
	controllerName="sap.fe.core.fpmExplorer.customDialogContent.customDialog"
>
	<VBox class="sapUiSmallMargin">
		<Text text="Show how to use our building blocks in dialogs" class="sapUiSmallMarginBottom" />
		<Panel class="sapUiSmallMarginBottom">
			<Button text="Show Dialog for Chart" press=".onShowDialogOneClicked" />
		</Panel>
		<Panel class="sapUiSmallMarginBottom">
			<Button text="Show Dialog for Table" press=".onShowDialogTwoClicked" />
		</Panel>
		<Panel class="sapUiSmallMarginBottom">
			<VBox>
				<Label text="Sales Order" />
				<Select
					id="salesOrderNumber"
					forceSelection="false"
					selectedKey="2922870"
					items="{
						path: '/RootEntity',
						sorter: { path: 'SalesOrder' }
					}"
				>
					<core:Item key="{SalesOrder}" text="{SalesOrder}" />
				</Select>
				<Button text="Show Dialog for Form" press=".onShowDialogThreeClicked" />
			</VBox>
		</Panel>
	</VBox>
</mvc:View>
