<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:macros="sap.fe.macros">
	<Dialog title="Dialog with Chart Building Block">
		<VBox class="sapUiMediumMargin">
			<macros:Chart
				metaPath="/RootEntity/@com.sap.vocabularies.UI.v1.Chart"
				selectionChange=".onChartSelectionChanged"
				personalization="Sort,Type,Item,Filter"
				selectionMode="Multiple"
			/>
			<Text text="NOTE: Sorting doesn't work here, since we're using a mock service" />
		</VBox>
		<endButton>
			<Button text="Close Dialog" press=".closeDialog" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>
