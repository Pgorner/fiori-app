<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table id="customViewWithTable" items="{
        path: '/RootEntity',
        sorter: {
            path: 'NameProperty'
        }
    }">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Root Entities" level="H2" />
					<ToolbarSpacer />
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<Label text="List of root entities" />
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column width="3em">
				<Text text="ID" />
			</Column>
			<Column width="4em">
				<Text text="Title" />
			</Column>
			<Column width="5em" hAlign="End">
				<Text text="Description" />
			</Column>
			<Column width="4em" hAlign="Center">
				<Text text="Name" />
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Active">
				<cells>
					<ObjectIdentifier text="{ID}" />
					<Text text="{TitleProperty}" />
					<Text text="{DescriptionProperty}" />
					<Text text="{NameProperty}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>
