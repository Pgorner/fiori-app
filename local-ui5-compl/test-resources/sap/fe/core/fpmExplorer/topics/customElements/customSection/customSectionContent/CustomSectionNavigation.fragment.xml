<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout">
	<l:VerticalLayout
		class="sapUiContentPadding"
		core:require="{handler: 'sap/fe/core/fpmExplorer/customSectionContent/CustomSectionNavigation'}"
	>
		<Text text="This section is hidden in Edit mode." />
		<Table id="customTableItems" items="{path: 'items'}" itemPress="handler.onPress">
			<columns>
				<Column width="12em">
					<Text text="Item identifier" />
				</Column>
				<Column>
					<Text text="Boolean" />
				</Column>
				<Column>
					<Text text="Text First" />
				</Column>
				<Column>
					<Text text="With Value Help" />
				</Column>
				<Column>
					<Text text="value" />
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Active">
					<cells>
						<ObjectIdentifier text="{ID}" />
						<Text text="{BooleanProperty}" />
						<Text text="{TextArrangementTextFirstProperty}" />
						<Text text="{PropertyWithValueHelp}" />
						<Text text="{PropertyWithCurrency}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</l:VerticalLayout>
</core:FragmentDefinition>
